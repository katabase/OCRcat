</TextLine>
<TextLine BASELINE="72 557 1528 557" HEIGHT="57" HPOS="72" ID="tl_6" VPOS="500" WIDTH="1456">
<String CONTENT="et nous ne saurions dire si elle est écrite, oui on non, de sa main." HEIGHT="57" HPOS="72" ID="string_tl_6" VPOS="500" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="73 607 1534 607" HEIGHT="60" HPOS="73" ID="tl_7" VPOS="547" WIDTH="1461">
<String CONTENT="Nous éprouvons le même doute sur les lettres cataloguées sous les" HEIGHT="60" HPOS="73" ID="string_tl_7" VPOS="547" WIDTH="1461"/>
</TextLine>
<TextLine BASELINE="73 652 588 652" HEIGHT="53" HPOS="73" ID="tl_8" VPOS="599" WIDTH="515">
