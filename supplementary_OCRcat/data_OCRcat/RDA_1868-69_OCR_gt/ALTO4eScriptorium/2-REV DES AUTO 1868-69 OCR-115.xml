<String CONTENT="et Cosimo, en deux lignes reliées par une accolade, au milieu et à côté" HEIGHT="59" HPOS="70" ID="string_tl_2" VPOS="297" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="70 402 1529 402" HEIGHT="56" HPOS="70" ID="tl_3" VPOS="346" WIDTH="1459">
<String CONTENT="de laquelle est d; Mèdicis. En l'absence de l’accolade, il devient" HEIGHT="56" HPOS="70" ID="string_tl_3" VPOS="346" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="70 460 1527 460" HEIGHT="63" HPOS="70" ID="tl_4" VPOS="397" WIDTH="1457">
