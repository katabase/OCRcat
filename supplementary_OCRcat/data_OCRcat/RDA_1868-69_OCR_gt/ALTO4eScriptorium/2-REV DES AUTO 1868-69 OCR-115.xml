<TextLine BASELINE="126 716 1536 716" HEIGHT="61" HPOS="126" ID="tl_9" VPOS="655" WIDTH="1410">
<String CONTENT="Pour en revenir à la lettre de Laurent-le-Magnifique, nous avons" HEIGHT="61" HPOS="126" ID="string_tl_9" VPOS="655" WIDTH="1410"/>
</TextLine>
<TextLine BASELINE="77 765 1535 765" HEIGHT="60" HPOS="77" ID="tl_10" VPOS="705" WIDTH="1458">
<String CONTENT="tout lieu de la croire authentique et nous la garantissons comme telle." HEIGHT="60" HPOS="77" ID="string_tl_10" VPOS="705" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="80 817 1538 817" HEIGHT="62" HPOS="80" ID="tl_11" VPOS="755" WIDTH="1458">
