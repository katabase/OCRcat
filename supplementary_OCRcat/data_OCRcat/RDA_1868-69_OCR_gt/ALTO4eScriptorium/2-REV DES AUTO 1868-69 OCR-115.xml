</Shape>
<TextLine BASELINE="132 1578 1542 1578" HEIGHT="56" HPOS="132" ID="tl_20" VPOS="1522" WIDTH="1410">
<String CONTENT="Un jeune homme, nommé H., se présentait, il y a quelque temps," HEIGHT="56" HPOS="132" ID="string_tl_20" VPOS="1522" WIDTH="1410"/>
</TextLine>
<TextLine BASELINE="80 1622 1545 1622" HEIGHT="52" HPOS="80" ID="tl_21" VPOS="1570" WIDTH="1465">
<String CONTENT="dans la librairie de M. Claudin, et offrait au commis un lot d’auto¬" HEIGHT="52" HPOS="80" ID="string_tl_21" VPOS="1570" WIDTH="1465"/>
</TextLine>
<TextLine BASELINE="82 1679 1545 1679" HEIGHT="58" HPOS="82" ID="tl_22" VPOS="1621" WIDTH="1463">
<String CONTENT="graphes modernes. L’était très-peu de chose : on en choisit dans le" HEIGHT="58" HPOS="82" ID="string_tl_22" VPOS="1621" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="82 1728 1544 1728" HEIGHT="57" HPOS="82" ID="tl_23" VPOS="1671" WIDTH="1462">
<String CONTENT="nombre pour une sixaine de francs. Revenu une seconde fois, avec un" HEIGHT="57" HPOS="82" ID="string_tl_23" VPOS="1671" WIDTH="1462"/>
</TextLine>
<TextLine BASELINE="81 1789 1546 1789" HEIGHT="68" HPOS="81" ID="tl_24" VPOS="1721" WIDTH="1465">
<String CONTENT="autre paquet, il ne put en vendre que pour trois francs. Un peu désap¬" HEIGHT="68" HPOS="81" ID="string_tl_24" VPOS="1721" WIDTH="1465"/>
</TextLine>
<TextLine BASELINE="85 1829 1548 1829" HEIGHT="57" HPOS="85" ID="tl_25" VPOS="1772" WIDTH="1463">
<String CONTENT="pointé, il demanda à l’acheteur quels étaient donc les autographes mo¬" HEIGHT="57" HPOS="85" ID="string_tl_25" VPOS="1772" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="82 1880 1544 1880" HEIGHT="59" HPOS="82" ID="tl_26" VPOS="1821" WIDTH="1462">
<String CONTENT="dernes qui avaient de la valeur. On lui cita quelques noms au hasard," HEIGHT="59" HPOS="82" ID="string_tl_26" VPOS="1821" WIDTH="1462"/>
</TextLine>
<TextLine BASELINE="83 1929 1426 1929" HEIGHT="57" HPOS="83" ID="tl_27" VPOS="1872" WIDTH="1343">
<String CONTENT="et sans se douter de l’usage qu’il pensait faire de ces indications." HEIGHT="57" HPOS="83" ID="string_tl_27" VPOS="1872" WIDTH="1343"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="410" HPOS="84" ID="r_4_3" VPOS="1927" WIDTH="1467">
<Shape>
<Polygon POINTS="84 1927 1551 1927 1551 2337 84 2337"/>
</Shape>
<TextLine BASELINE="136 1985 1546 1985" HEIGHT="57" HPOS="136" ID="tl_28" VPOS="1928" WIDTH="1410">
<String CONTENT="Les lauriers de Lucas, le mystificateur de M. Chasles, l’empêchaient," HEIGHT="57" HPOS="136" ID="string_tl_28" VPOS="1928" WIDTH="1410"/>
</TextLine>
<TextLine BASELINE="85 2035 1546 2035" HEIGHT="57" HPOS="85" ID="tl_29" VPOS="1978" WIDTH="1461">
<String CONTENT="paraît-il, de dormir. Il se disait sans doute que si l’on avait pu tromper" HEIGHT="57" HPOS="85" ID="string_tl_29" VPOS="1978" WIDTH="1461"/>
</TextLine>
<TextLine BASELINE="85 2084 1547 2084" HEIGHT="55" HPOS="85" ID="tl_30" VPOS="2029" WIDTH="1462">
<String CONTENT="aussi facilement un membre de l’Institut, il y aurait plus beau jeu avec" HEIGHT="55" HPOS="85" ID="string_tl_30" VPOS="2029" WIDTH="1462"/>
</TextLine>
<TextLine BASELINE="85 2134 1548 2134" HEIGHT="56" HPOS="85" ID="tl_31" VPOS="2078" WIDTH="1463">
<String CONTENT="de simples marchands. Voilà où était l’erreur, car le faussaire Lucas" HEIGHT="56" HPOS="85" ID="string_tl_31" VPOS="2078" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="85 2184 1547 2184" HEIGHT="55" HPOS="85" ID="tl_32" VPOS="2129" WIDTH="1462">
<String CONTENT="eût échoué du premier coup s’il se fût adressé aux personnes qui s’oc¬" HEIGHT="55" HPOS="85" ID="string_tl_32" VPOS="2129" WIDTH="1462"/>
</TextLine>
<TextLine BASELINE="86 2237 1550 2237" HEIGHT="59" HPOS="86" ID="tl_33" VPOS="2178" WIDTH="1464">
<String CONTENT="cupent spécialement de ce genre de curiosité. Il s’est bien gardé des" HEIGHT="59" HPOS="86" ID="string_tl_33" VPOS="2178" WIDTH="1464"/>
</TextLine>
<TextLine BASELINE="86 2286 1545 2286" HEIGHT="57" HPOS="86" ID="tl_34" VPOS="2229" WIDTH="1459">
<String CONTENT="experts, et c’est grâce à cette prudence, et en se bornant à un seul" HEIGHT="57" HPOS="86" ID="string_tl_34" VPOS="2229" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="86 2336 1394 2336" HEIGHT="57" HPOS="86" ID="tl_35" VPOS="2279" WIDTH="1308">
<String CONTENT="client, qu’il a pu continuer sa petite industrie pendant six ans." HEIGHT="57" HPOS="86" ID="string_tl_35" VPOS="2279" WIDTH="1308"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="359" HPOS="86" ID="r_4_4" VPOS="2333" WIDTH="1464">
<Shape>
<Polygon POINTS="86 2333 1550 2333 1550 2692 86 2692"/>
</Shape>
<TextLine BASELINE="140 2391 1547 2391" HEIGHT="57" HPOS="140" ID="tl_36" VPOS="2334" WIDTH="1407">
<String CONTENT="Le jeune H. se mil donc à fabriquer des autographes sous les noms" HEIGHT="57" HPOS="140" ID="string_tl_36" VPOS="2334" WIDTH="1407"/>
</TextLine>
<TextLine BASELINE="87 2442 1548 2442" HEIGHT="59" HPOS="87" ID="tl_37" VPOS="2383" WIDTH="1461">
<String CONTENT="qu’il avait saisis au vol dans la conversation, espérant en tirer meilleur" HEIGHT="59" HPOS="87" ID="string_tl_37" VPOS="2383" WIDTH="1461"/>
</TextLine>
<TextLine BASELINE="89 2492 1548 2492" HEIGHT="58" HPOS="89" ID="tl_38" VPOS="2434" WIDTH="1459">
<String CONTENT="parti que de ceux, très-authentiques, mais insignifiants , qu’il avait" HEIGHT="58" HPOS="89" ID="string_tl_38" VPOS="2434" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="90 2541 1547 2541" HEIGHT="58" HPOS="90" ID="tl_39" VPOS="2483" WIDTH="1457">
<String CONTENT="vendus. Il les fit présenter par sa mère, chez le même libraire. Le" HEIGHT="58" HPOS="90" ID="string_tl_39" VPOS="2483" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="88 2591 1542 2591" HEIGHT="58" HPOS="88" ID="tl_40" VPOS="2533" WIDTH="1454">
<String CONTENT="commis n’était plus le même : C’était M. René Muffat, ancien libraire." HEIGHT="58" HPOS="88" ID="string_tl_40" VPOS="2533" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="92 2643 1548 2643" HEIGHT="60" HPOS="92" ID="tl_41" VPOS="2583" WIDTH="1456">
<String CONTENT="Il y avait environ vingt-cinq lettres. Il en offrit vingt francs. On le" HEIGHT="60" HPOS="92" ID="string_tl_41" VPOS="2583" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="92 2691 1549 2691" HEIGHT="58" HPOS="92" ID="tl_42" VPOS="2633" WIDTH="1457">
<String CONTENT="prit au mot. Il demanda à celle femme son adresse. Elle dit s’appeler" HEIGHT="58" HPOS="92" ID="string_tl_42" VPOS="2633" WIDTH="1457"/>
</TextLine>
</TextBlock>
