<TextLine BASELINE="133 1423 1544 1423" HEIGHT="57" HPOS="133" ID="tl_17" VPOS="1366" WIDTH="1411">
<String CONTENT="Dernièrement, les journaux ont fait grand bruit de l’arrestation d’une" HEIGHT="57" HPOS="133" ID="string_tl_17" VPOS="1366" WIDTH="1411"/>
</TextLine>
<TextLine BASELINE="81 1473 1544 1473" HEIGHT="58" HPOS="81" ID="tl_18" VPOS="1415" WIDTH="1463">
<String CONTENT="femme et de son fils, à propos de faux autographes. Voici le fait, réduit" HEIGHT="58" HPOS="81" ID="string_tl_18" VPOS="1415" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="80 1520 669 1520" HEIGHT="53" HPOS="80" ID="tl_19" VPOS="1467" WIDTH="589">
<String CONTENT="à sa plus simple expression :" HEIGHT="53" HPOS="80" ID="string_tl_19" VPOS="1467" WIDTH="589"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="409" HPOS="79" ID="r_4_2" VPOS="1521" WIDTH="1470">
