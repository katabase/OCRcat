<TextLine BASELINE="122 624 1526 624" HEIGHT="53" HPOS="122" ID="tl_8" VPOS="571" WIDTH="1404">
<String CONTENT="Voici le texte de la révélation de M. Chasles, extrait du compte¬" HEIGHT="53" HPOS="122" ID="string_tl_8" VPOS="571" WIDTH="1404"/>
</TextLine>
<TextLine BASELINE="72 667 1095 667" HEIGHT="45" HPOS="72" ID="tl_9" VPOS="622" WIDTH="1023">
<String CONTENT="rendu officiel de l’Académie des Sciences, n° 11 :" HEIGHT="45" HPOS="72" ID="string_tl_9" VPOS="622" WIDTH="1023"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="1443" HPOS="72" ID="r_2_3" VPOS="688" WIDTH="1463">
<Shape>
<Polygon POINTS="72 688 1535 688 1535 2131 72 2131"/>
</Shape>
<TextLine BASELINE="115 736 1529 736" HEIGHT="47" HPOS="115" ID="tl_10" VPOS="689" WIDTH="1414">
<String CONTENT="Lorsque, dans les premiers jours de juillet 1867, j’ai eu l’honneur" HEIGHT="47" HPOS="115" ID="string_tl_10" VPOS="689" WIDTH="1414"/>
</TextLine>
<TextLine BASELINE="73 781 1528 781" HEIGHT="47" HPOS="73" ID="tl_11" VPOS="734" WIDTH="1455">
<String CONTENT="de communiquer à l’Académie certains documents qui prouvaient" HEIGHT="47" HPOS="73" ID="string_tl_11" VPOS="734" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="73 824 1529 824" HEIGHT="44" HPOS="73" ID="tl_12" VPOS="780" WIDTH="1456">
<String CONTENT="que Pascal auraient eu connaissance des lois de l’attraction et au¬" HEIGHT="44" HPOS="73" ID="string_tl_12" VPOS="780" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="73 871 1528 871" HEIGHT="47" HPOS="73" ID="tl_13" VPOS="824" WIDTH="1455">
<String CONTENT="rait eu même des relations avec le jeune Newton, je n’agissais" HEIGHT="47" HPOS="73" ID="string_tl_13" VPOS="824" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="76 919 1528 919" HEIGHT="49" HPOS="76" ID="tl_14" VPOS="870" WIDTH="1452">
<String CONTENT="pas avec précipitation; car c’était depuis 1861, en novembre, qu’un" HEIGHT="49" HPOS="76" ID="string_tl_14" VPOS="870" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="74 961 1528 961" HEIGHT="47" HPOS="74" ID="tl_15" VPOS="914" WIDTH="1454">
<String CONTENT="individu, se disant archiviste paléographe et faisant commerce de" HEIGHT="47" HPOS="74" ID="string_tl_15" VPOS="914" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="74 1011 1532 1011" HEIGHT="52" HPOS="74" ID="tl_16" VPOS="959" WIDTH="1458">
<String CONTENT="titres généalogiques, me procurait ces documents étrangers à la" HEIGHT="52" HPOS="74" ID="string_tl_16" VPOS="959" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="73 1050 1531 1050" HEIGHT="47" HPOS="73" ID="tl_17" VPOS="1003" WIDTH="1458">
<String CONTENT="spécialité de son commerce, de la part du possesseur qui les faisait" HEIGHT="47" HPOS="73" ID="string_tl_17" VPOS="1003" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="77 1096 1530 1096" HEIGHT="46" HPOS="77" ID="tl_18" VPOS="1050" WIDTH="1453">
<String CONTENT="proposer. Je connaissias donc l’importance scientifique de ces do¬" HEIGHT="46" HPOS="77" ID="string_tl_18" VPOS="1050" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="75 1149 1532 1149" HEIGHT="54" HPOS="75" ID="tl_19" VPOS="1095" WIDTH="1457">
<String CONTENT="cuments; je savais, en outre, que je ne possédais pas toute la collec¬" HEIGHT="54" HPOS="75" ID="string_tl_19" VPOS="1095" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="75 1186 1531 1186" HEIGHT="54" HPOS="75" ID="tl_20" VPOS="1132" WIDTH="1456">
<String CONTENT="tion; j’insistais pour qu’on me la livrât tout entière; mais on me" HEIGHT="54" HPOS="75" ID="string_tl_20" VPOS="1132" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="77 1231 1530 1231" HEIGHT="47" HPOS="77" ID="tl_21" VPOS="1184" WIDTH="1453">
<String CONTENT="répondait que le possesseur, qui l’avait rapportée d’Amérique, où" HEIGHT="47" HPOS="77" ID="string_tl_21" VPOS="1184" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="77 1276 1531 1276" HEIGHT="47" HPOS="77" ID="tl_22" VPOS="1229" WIDTH="1454">
<String CONTENT="elle avait passé en 1791, se plaisait à parcourir toutes ces pièces," HEIGHT="47" HPOS="77" ID="string_tl_22" VPOS="1229" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="78 1323 1531 1323" HEIGHT="49" HPOS="78" ID="tl_23" VPOS="1274" WIDTH="1453">
<String CONTENT="et ne voulait les livrer qu’à son loisir. J’ai donc dû, on le conçoit," HEIGHT="49" HPOS="78" ID="string_tl_23" VPOS="1274" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="77 1365 1530 1365" HEIGHT="46" HPOS="77" ID="tl_24" VPOS="1319" WIDTH="1453">
<String CONTENT="quand M. Le Verrier, en séance de l’Académie, le 19 août 1867," HEIGHT="46" HPOS="77" ID="string_tl_24" VPOS="1319" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="78 1412 1533 1412" HEIGHT="48" HPOS="78" ID="tl_25" VPOS="1364" WIDTH="1455">
<String CONTENT="m’a demandé de qui je tenais les documents, et de déclarer tout" HEIGHT="48" HPOS="78" ID="string_tl_25" VPOS="1364" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="77 1456 1531 1456" HEIGHT="46" HPOS="77" ID="tl_26" VPOS="1410" WIDTH="1454">
<String CONTENT="ce qui en existait, me refuser à satisfaire à sa demande. Car, pu¬" HEIGHT="46" HPOS="77" ID="string_tl_26" VPOS="1410" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="78 1507 1533 1507" HEIGHT="53" HPOS="78" ID="tl_27" VPOS="1454" WIDTH="1455">
<String CONTENT="blier dès ce moment de qui je les tenais, c’était provoquer tout" HEIGHT="53" HPOS="78" ID="string_tl_27" VPOS="1454" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="78 1551 1532 1551" HEIGHT="51" HPOS="78" ID="tl_28" VPOS="1500" WIDTH="1454">
<String CONTENT="aussitôt auprès de celui qui me les proposait, des offres aux¬" HEIGHT="51" HPOS="78" ID="string_tl_28" VPOS="1500" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="79 1591 1532 1591" HEIGHT="46" HPOS="79" ID="tl_29" VPOS="1545" WIDTH="1453">
<String CONTENT="quelles il n’aurait pas résisté. C’était compromettre le sort de" HEIGHT="46" HPOS="79" ID="string_tl_29" VPOS="1545" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="79 1642 1532 1642" HEIGHT="53" HPOS="79" ID="tl_30" VPOS="1589" WIDTH="1453">
<String CONTENT="ces documents, que je regardais comme précieux. Tout le" HEIGHT="53" HPOS="79" ID="string_tl_30" VPOS="1589" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="78 1680 1530 1680" HEIGHT="46" HPOS="78" ID="tl_31" VPOS="1634" WIDTH="1452">
<String CONTENT="monde, assurément, m’aurait blâmé. Je ne pouvais pas dire" HEIGHT="46" HPOS="78" ID="string_tl_31" VPOS="1634" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="77 1731 1531 1731" HEIGHT="53" HPOS="77" ID="tl_32" VPOS="1678" WIDTH="1454">
<String CONTENT="non plus que les quelques milliers de pièces déjà entre mes" HEIGHT="53" HPOS="77" ID="string_tl_32" VPOS="1678" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="77 1761 1531 1761" HEIGHT="37" HPOS="77" ID="tl_33" VPOS="1724" WIDTH="1454">
<String CONTENT="mains étaient les seules de la collection. J’ai donc dû m’ab¬" HEIGHT="37" HPOS="77" ID="string_tl_33" VPOS="1724" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="76 1814 1531 1814" HEIGHT="45" HPOS="76" ID="tl_34" VPOS="1769" WIDTH="1455">
<String CONTENT="stenir nettement de satisfaire aux demandes de notre confrère," HEIGHT="45" HPOS="76" ID="string_tl_34" VPOS="1769" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="76 1861 1532 1861" HEIGHT="48" HPOS="76" ID="tl_35" VPOS="1813" WIDTH="1456">
<String CONTENT="sans qu’on en puisse jeter un blâme sur ma réserve; d’autant" HEIGHT="48" HPOS="76" ID="string_tl_35" VPOS="1813" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="77 1906 1532 1906" HEIGHT="48" HPOS="77" ID="tl_36" VPOS="1858" WIDTH="1455">
<String CONTENT="plus, et l’Académie le sait parfaitement, que j’invitais avec insis¬" HEIGHT="48" HPOS="77" ID="string_tl_36" VPOS="1858" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="77 1951 1534 1951" HEIGHT="47" HPOS="77" ID="tl_37" VPOS="1904" WIDTH="1457">
<String CONTENT="tance toutes les personnes que la question pouvait intéresser à" HEIGHT="47" HPOS="77" ID="string_tl_37" VPOS="1904" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="76 1995 1531 1995" HEIGHT="47" HPOS="76" ID="tl_38" VPOS="1948" WIDTH="1455">
<String CONTENT="venir prendre connaissance de la masse des documents. Et bien" HEIGHT="47" HPOS="76" ID="string_tl_38" VPOS="1948" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="77 2046 1533 2046" HEIGHT="52" HPOS="77" ID="tl_39" VPOS="1994" WIDTH="1456">
<String CONTENT="plus, dès que les objections sont venues de l’étranger, j’envoyais" HEIGHT="52" HPOS="77" ID="string_tl_39" VPOS="1994" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="76 2089 1532 2089" HEIGHT="51" HPOS="76" ID="tl_40" VPOS="2038" WIDTH="1456">
<String CONTENT="toutes les pièces, soit originales, soit en photographie, à qui m’ex¬" HEIGHT="51" HPOS="76" ID="string_tl_40" VPOS="2038" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="77 2130 1313 2130" HEIGHT="48" HPOS="77" ID="tl_41" VPOS="2082" WIDTH="1236">
<String CONTENT="primait le désir de les connaître. Pouvais-je faire plus?" HEIGHT="48" HPOS="77" ID="string_tl_41" VPOS="2082" WIDTH="1236"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="219" HPOS="74" ID="r_2_4" VPOS="2133" WIDTH="1460">
<Shape>
<Polygon POINTS="74 2133 1534 2133 1534 2352 74 2352"/>
</Shape>
<TextLine BASELINE="122 2186 1533 2186" HEIGHT="52" HPOS="122" ID="tl_42" VPOS="2134" WIDTH="1411">
<String CONTENT="Du reste, le grand nombre des documents, les noms de leurs" HEIGHT="52" HPOS="122" ID="string_tl_42" VPOS="2134" WIDTH="1411"/>
</TextLine>
<TextLine BASELINE="78 2224 1533 2224" HEIGHT="45" HPOS="78" ID="tl_43" VPOS="2179" WIDTH="1455">
<String CONTENT="auteurs, la variété des matières scientifiques , littéraires, histo¬" HEIGHT="45" HPOS="78" ID="string_tl_43" VPOS="2179" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="79 2272 1533 2272" HEIGHT="48" HPOS="79" ID="tl_44" VPOS="2224" WIDTH="1454">
<String CONTENT="riques qui s’y trouvaient traitées, et la parfaite concordance que" HEIGHT="48" HPOS="79" ID="string_tl_44" VPOS="2224" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="75 2315 1533 2315" HEIGHT="46" HPOS="75" ID="tl_45" VPOS="2269" WIDTH="1458">
<String CONTENT="j’y reconnaissais, ne me laissaient aucun doute sur l’authenticité" HEIGHT="46" HPOS="75" ID="string_tl_45" VPOS="2269" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="79 2351 442 2351" HEIGHT="36" HPOS="79" ID="tl_46" VPOS="2315" WIDTH="363">
<String CONTENT="de leur contenu." HEIGHT="36" HPOS="79" ID="string_tl_46" VPOS="2315" WIDTH="363"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="230" HPOS="79" ID="r_2_5" VPOS="2362" WIDTH="1457">
<Shape>
<Polygon POINTS="79 2362 1536 2362 1536 2592 79 2592"/>
</Shape>
<TextLine BASELINE="123 2410 1534 2410" HEIGHT="47" HPOS="123" ID="tl_47" VPOS="2363" WIDTH="1411">
<String CONTENT="C’est cet accord entre ces documents qui m’a permis de toujours" HEIGHT="47" HPOS="123" ID="string_tl_47" VPOS="2363" WIDTH="1411"/>
</TextLine>
<TextLine BASELINE="80 2456 1535 2456" HEIGHT="47" HPOS="80" ID="tl_48" VPOS="2409" WIDTH="1455">
<String CONTENT="répondre à toutes les objections qui se sont produites : tellement" HEIGHT="47" HPOS="80" ID="string_tl_48" VPOS="2409" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="80 2502 1533 2502" HEIGHT="49" HPOS="80" ID="tl_49" VPOS="2453" WIDTH="1453">
<String CONTENT="que l’on a cru pouvoir imaginer un faussaire, et bientôt après une" HEIGHT="49" HPOS="80" ID="string_tl_49" VPOS="2453" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="80 2545 1535 2545" HEIGHT="47" HPOS="80" ID="tl_50" VPOS="2498" WIDTH="1455">
<String CONTENT="association de faussaires, qui fabriquaient, même au dernier" HEIGHT="47" HPOS="80" ID="string_tl_50" VPOS="2498" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="81 2591 930 2591" HEIGHT="46" HPOS="81" ID="tl_51" VPOS="2545" WIDTH="849">
<String CONTENT="moment, pour les besoins de la cause." HEIGHT="46" HPOS="81" ID="string_tl_51" VPOS="2545" WIDTH="849"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="95" HPOS="80" ID="r_2_6" VPOS="2592" WIDTH="1457">
<Shape>
<Polygon POINTS="80 2592 1537 2592 1537 2687 80 2687"/>
</Shape>
<TextLine BASELINE="125 2646 1535 2646" HEIGHT="53" HPOS="125" ID="tl_52" VPOS="2593" WIDTH="1410">
<String CONTENT="Qu’on me permette d’ajouter à ce sujet que précisément la" HEIGHT="53" HPOS="125" ID="string_tl_52" VPOS="2593" WIDTH="1410"/>
</TextLine>
<TextLine BASELINE="81 2686 1536 2686" HEIGHT="54" HPOS="81" ID="tl_53" VPOS="2632" WIDTH="1455">
<String CONTENT="lettre de Jacques II, qu’invoquait M. Faugère pour s’exprimer" HEIGHT="54" HPOS="81" ID="string_tl_53" VPOS="2632" WIDTH="1455"/>
</TextLine>
