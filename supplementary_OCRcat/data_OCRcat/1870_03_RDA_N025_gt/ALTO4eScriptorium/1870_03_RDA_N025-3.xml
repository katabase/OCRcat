</Shape>
<TextLine BASELINE="327 818 1722 818" HEIGHT="51" HPOS="327" ID="tl_12" VPOS="767" WIDTH="1395">
<String CONTENT="PROVENANCE. — M. Chasles, dans sa déposition, rapporte ainsi le" HEIGHT="51" HPOS="327" ID="string_tl_12" VPOS="767" WIDTH="1395"/>
</TextLine>
<TextLine BASELINE="275 867 1718 867" HEIGHT="51" HPOS="275" ID="tl_13" VPOS="816" WIDTH="1443">
<String CONTENT="conte que lui avait fait Lucas : « Cette collection, me disait-il, avait" HEIGHT="51" HPOS="275" ID="string_tl_13" VPOS="816" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="275 916 1724 916" HEIGHT="50" HPOS="275" ID="tl_14" VPOS="866" WIDTH="1449">
<String CONTENT="été formée par M le comte de Boisjourdain, qui, émigrant en 1791 et" HEIGHT="50" HPOS="275" ID="string_tl_14" VPOS="866" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="279 965 1722 965" HEIGHT="49" HPOS="279" ID="tl_15" VPOS="916" WIDTH="1443">
<String CONTENT="passant en Amérique, avait fait naufrage et avait péri, mais sa col¬" HEIGHT="49" HPOS="279" ID="string_tl_15" VPOS="916" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="279 1017 1727 1017" HEIGHT="52" HPOS="279" ID="tl_16" VPOS="965" WIDTH="1448">
<String CONTENT="lection avait été sauvée; une partie seulement avait été endommagée" HEIGHT="52" HPOS="279" ID="string_tl_16" VPOS="965" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="279 1066 1726 1066" HEIGHT="52" HPOS="279" ID="tl_17" VPOS="1014" WIDTH="1447">
<String CONTENT="par l’eau, mais pouvait encore se vendre.» Il ajoute : « M. Lucas me" HEIGHT="52" HPOS="279" ID="string_tl_17" VPOS="1014" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="278 1115 1722 1115" HEIGHT="50" HPOS="278" ID="tl_18" VPOS="1065" WIDTH="1444">
<String CONTENT="raconta un jour que Louis XVI, qui était aussi un collectionneur," HEIGHT="50" HPOS="278" ID="string_tl_18" VPOS="1065" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="278 1167 1723 1167" HEIGHT="54" HPOS="278" ID="tl_19" VPOS="1113" WIDTH="1445">
<String CONTENT="n’ayant plus le temps de s’occuper de sa collection, avait envoyé au" HEIGHT="54" HPOS="278" ID="string_tl_19" VPOS="1113" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="279 1214 1725 1214" HEIGHT="51" HPOS="279" ID="tl_20" VPOS="1163" WIDTH="1446">
<String CONTENT="grand collectionneur, M. le comte de Boisjourdain, cinq ou six mille" HEIGHT="51" HPOS="279" ID="string_tl_20" VPOS="1163" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="281 1263 1722 1263" HEIGHT="50" HPOS="281" ID="tl_21" VPOS="1213" WIDTH="1441">
<String CONTENT="pièces fort curieuses. » C'est la première fois que le nom de Louis XVI" HEIGHT="50" HPOS="281" ID="string_tl_21" VPOS="1213" WIDTH="1441"/>
</TextLine>
<TextLine BASELINE="279 1315 1726 1315" HEIGHT="52" HPOS="279" ID="tl_22" VPOS="1263" WIDTH="1447">
<String CONTENT="est cité en cette affaire. M. Chasles a eu tort de ne pas le dire plus" HEIGHT="52" HPOS="279" ID="string_tl_22" VPOS="1263" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="281 1365 1727 1365" HEIGHT="54" HPOS="281" ID="tl_23" VPOS="1311" WIDTH="1446">
<String CONTENT="tôt ; car Louis XVI n’est pas si loin de nous que l’on naît pu s’enquérir" HEIGHT="54" HPOS="281" ID="string_tl_23" VPOS="1311" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="275 1411 1724 1411" HEIGHT="50" HPOS="275" ID="tl_24" VPOS="1361" WIDTH="1449">
<String CONTENT="jusqu’à quel point il était possédé du goût des autographes, et com¬" HEIGHT="50" HPOS="275" ID="string_tl_24" VPOS="1361" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="281 1461 1725 1461" HEIGHT="50" HPOS="281" ID="tl_25" VPOS="1411" WIDTH="1444">
<String CONTENT="ment, amateur jaloux, il avait recueilli six mille pièces curieuses sans" HEIGHT="50" HPOS="281" ID="string_tl_25" VPOS="1411" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="279 1512 1724 1512" HEIGHT="52" HPOS="279" ID="tl_26" VPOS="1460" WIDTH="1445">
<String CONTENT="en faire part à ses amis, sinon à ce fortuné de Boisjourdain, à qui il" HEIGHT="52" HPOS="279" ID="string_tl_26" VPOS="1460" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="279 1560 1727 1560" HEIGHT="52" HPOS="279" ID="tl_27" VPOS="1508" WIDTH="1448">
<String CONTENT="avait donné le bloc Non : VI. Chasles n’avait donné que les énigmes de" HEIGHT="52" HPOS="279" ID="string_tl_27" VPOS="1508" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="283 1612 1724 1612" HEIGHT="54" HPOS="283" ID="tl_28" VPOS="1558" WIDTH="1441">
<String CONTENT="Lucas les plus difficiles à débrouiller, à cause de l’éloignement des temps." HEIGHT="54" HPOS="283" ID="string_tl_28" VPOS="1558" WIDTH="1441"/>
</TextLine>
<TextLine BASELINE="280 1659 1726 1659" HEIGHT="52" HPOS="280" ID="tl_29" VPOS="1607" WIDTH="1446">
<String CONTENT="C’était d’abord de Desmainseaux et de Blondeau de Chaînage que" HEIGHT="52" HPOS="280" ID="string_tl_29" VPOS="1607" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="281 1706 1722 1706" HEIGHT="49" HPOS="281" ID="tl_30" VPOS="1657" WIDTH="1441">
<String CONTENT="venait la collection, puis de Louis XIII, Louis XIV, Mmes de Maintenon" HEIGHT="49" HPOS="281" ID="string_tl_30" VPOS="1657" WIDTH="1441"/>
</TextLine>
<TextLine BASELINE="277 1756 1725 1756" HEIGHT="50" HPOS="277" ID="tl_31" VPOS="1706" WIDTH="1448">
<String CONTENT="et de Pompadour. Pour les pièces anciennnes, le collectionneur était" HEIGHT="50" HPOS="277" ID="string_tl_31" VPOS="1706" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="280 1805 1189 1805" HEIGHT="49" HPOS="280" ID="tl_32" VPOS="1756" WIDTH="909">
<String CONTENT="maître François Rabelais : cela se comprend." HEIGHT="49" HPOS="280" ID="string_tl_32" VPOS="1756" WIDTH="909"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="486" HPOS="276" ID="r_1_4" VPOS="1804" WIDTH="1452">
<Shape>
<Polygon POINTS="276 1804 1728 1804 1728 2290 276 2290"/>
</Shape>
<TextLine BASELINE="328 1856 1723 1856" HEIGHT="51" HPOS="328" ID="tl_33" VPOS="1805" WIDTH="1395">
<String CONTENT="LA PASSION DE M. CHASLES. — Tout ce que Lucas lui apportait, il" HEIGHT="51" HPOS="328" ID="string_tl_33" VPOS="1805" WIDTH="1395"/>
</TextLine>
<TextLine BASELINE="281 1906 1719 1906" HEIGHT="52" HPOS="281" ID="tl_34" VPOS="1854" WIDTH="1438">
<String CONTENT="le prenait : M. Chasles l a déclaré dans l’interrogatoire, il a ajouté :" HEIGHT="52" HPOS="281" ID="string_tl_34" VPOS="1854" WIDTH="1438"/>
</TextLine>
<TextLine BASELINE="283 1955 1727 1955" HEIGHT="51" HPOS="283" ID="tl_35" VPOS="1904" WIDTH="1444">
<String CONTENT="« Un jour, je me fâchai, et j’allai jusqu'à le traiter de fripon; mais" HEIGHT="51" HPOS="283" ID="string_tl_35" VPOS="1904" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="277 2005 1722 2005" HEIGHT="51" HPOS="277" ID="tl_36" VPOS="1954" WIDTH="1445">
<String CONTENT="lui, avec un sang-froid qui m'étonne plus encore aujourd’hui que je" HEIGHT="51" HPOS="277" ID="string_tl_36" VPOS="1954" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="279 2052 1719 2052" HEIGHT="50" HPOS="279" ID="tl_37" VPOS="2002" WIDTH="1440">
<String CONTENT="connais l'homme, il me répondit sérieusement, et gravement : « Si" HEIGHT="50" HPOS="279" ID="string_tl_37" VPOS="2002" WIDTH="1440"/>
</TextLine>
<TextLine BASELINE="280 2102 1725 2102" HEIGHT="50" HPOS="280" ID="tl_38" VPOS="2052" WIDTH="1445">
<String CONTENT="vous n’êtes pas satisfait de moi, rendez-moi mes pièces, et je vous ren¬" HEIGHT="50" HPOS="280" ID="string_tl_38" VPOS="2052" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="279 2151 1727 2151" HEIGHT="51" HPOS="279" ID="tl_39" VPOS="2100" WIDTH="1448">
<String CONTENT="drai vos 150,000 francs. » Cela fit l’effet qu’il attendait: à cette" HEIGHT="51" HPOS="279" ID="string_tl_39" VPOS="2100" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="280 2203 1724 2203" HEIGHT="53" HPOS="280" ID="tl_40" VPOS="2150" WIDTH="1444">
<String CONTENT="époque, à aucun prix, je n’aurais voulu rendre mes pièces. » Passion" HEIGHT="53" HPOS="280" ID="string_tl_40" VPOS="2150" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="281 2251 1727 2251" HEIGHT="52" HPOS="281" ID="tl_41" VPOS="2199" WIDTH="1446">
<String CONTENT="et foi, il y avait là ces deux choses, qui peuvent se rencontrer après" HEIGHT="52" HPOS="281" ID="string_tl_41" VPOS="2199" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="283 2289 698 2289" HEIGHT="35" HPOS="283" ID="tl_42" VPOS="2254" WIDTH="415">
<String CONTENT="tout dans un savant." HEIGHT="35" HPOS="283" ID="string_tl_42" VPOS="2254" WIDTH="415"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="351" HPOS="281" ID="r_1_5" VPOS="2298" WIDTH="1449">
<Shape>
<Polygon POINTS="281 2298 1730 2298 1730 2649 281 2649"/>
</Shape>
<TextLine BASELINE="331 2350 1723 2350" HEIGHT="51" HPOS="331" ID="tl_43" VPOS="2299" WIDTH="1392">
<String CONTENT="BESOIN DE LA CAUSE. — Ce n'était pas sans raison que M. Faugère." HEIGHT="51" HPOS="331" ID="string_tl_43" VPOS="2299" WIDTH="1392"/>
</TextLine>
<TextLine BASELINE="282 2400 1726 2400" HEIGHT="52" HPOS="282" ID="tl_44" VPOS="2348" WIDTH="1444">
<String CONTENT="voyant toujours arriver de nouvelles pièces pour appuyer celles qui se" HEIGHT="52" HPOS="282" ID="string_tl_44" VPOS="2348" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="282 2449 1727 2449" HEIGHT="53" HPOS="282" ID="tl_45" VPOS="2396" WIDTH="1445">
<String CONTENT="trouvaient en défaut dans les débats de l’Académie, prétendait qu’on" HEIGHT="53" HPOS="282" ID="string_tl_45" VPOS="2396" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="285 2498 1728 2498" HEIGHT="51" HPOS="285" ID="tl_46" VPOS="2447" WIDTH="1443">
<String CONTENT="les fabriquait pour les besoins de la cause, et que M. Leverrier, s’ins¬" HEIGHT="51" HPOS="285" ID="string_tl_46" VPOS="2447" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="285 2556 1729 2556" HEIGHT="61" HPOS="285" ID="tl_47" VPOS="2495" WIDTH="1444">
<String CONTENT="pirant de la même pensée, demandait que M. Chasles déposât la col¬" HEIGHT="61" HPOS="285" ID="string_tl_47" VPOS="2495" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="285 2596 1728 2596" HEIGHT="62" HPOS="285" ID="tl_48" VPOS="2534" WIDTH="1443">
<String CONTENT="lection tout entière. Les débats du procès ont pleinement justifié ces" HEIGHT="62" HPOS="285" ID="string_tl_48" VPOS="2534" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="285 2648 1577 2648" HEIGHT="54" HPOS="285" ID="tl_49" VPOS="2594" WIDTH="1292">
<String CONTENT="soupçons. Voici en effet ce qu’on trouve dans le réquisitoire :" HEIGHT="54" HPOS="285" ID="string_tl_49" VPOS="2594" WIDTH="1292"/>
</TextLine>
