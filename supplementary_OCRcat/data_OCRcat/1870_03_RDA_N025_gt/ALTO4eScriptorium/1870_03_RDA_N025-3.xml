<TextLine BASELINE="272 322 1712 322" HEIGHT="49" HPOS="272" ID="tl_2" VPOS="273" WIDTH="1440">
<String CONTENT="assez cher, 500 francs ; puis une de Rabelais, une de Racine, à 200 fr." HEIGHT="49" HPOS="272" ID="string_tl_2" VPOS="273" WIDTH="1440"/>
</TextLine>
<TextLine BASELINE="272 373 1715 373" HEIGHT="52" HPOS="272" ID="tl_3" VPOS="321" WIDTH="1443">
<String CONTENT="chaque. » Suivant la défense, Lucas aurait été amené malgré lui k" HEIGHT="52" HPOS="272" ID="string_tl_3" VPOS="321" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="273 420 1716 420" HEIGHT="49" HPOS="273" ID="tl_4" VPOS="371" WIDTH="1443">
<String CONTENT="vendre des pièces fausses à M. Chasles. Dans le commencement de leurs" HEIGHT="49" HPOS="273" ID="string_tl_4" VPOS="371" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="272 472 1715 472" HEIGHT="51" HPOS="272" ID="tl_5" VPOS="421" WIDTH="1443">
<String CONTENT="relations, il ne lui aurait remis que des autographes authentiques. Un" HEIGHT="51" HPOS="272" ID="string_tl_5" VPOS="421" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="270 521 1717 521" HEIGHT="51" HPOS="270" ID="tl_6" VPOS="470" WIDTH="1447">
<String CONTENT="jour, il aurait laissé tomber de son portefeuille une pièce qu'il cher¬" HEIGHT="51" HPOS="270" ID="string_tl_6" VPOS="470" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="273 560 1716 560" HEIGHT="41" HPOS="273" ID="tl_7" VPOS="519" WIDTH="1443">
<String CONTENT="chait à dissimuler. M. Chasles la ramassa. C’était une lettre d’un" HEIGHT="41" HPOS="273" ID="string_tl_7" VPOS="519" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="275 619 1715 619" HEIGHT="50" HPOS="275" ID="tl_8" VPOS="569" WIDTH="1440">
<String CONTENT="personnage illustre, fabriquée par Lucas. M. Chasles voulut l’acheter," HEIGHT="50" HPOS="275" ID="string_tl_8" VPOS="569" WIDTH="1440"/>
</TextLine>
<TextLine BASELINE="273 669 1719 669" HEIGHT="50" HPOS="273" ID="tl_9" VPOS="619" WIDTH="1446">
<String CONTENT="et comme il lui fut répondu qu’elle n’était pas à vendre, il insista de" HEIGHT="50" HPOS="273" ID="string_tl_9" VPOS="619" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="276 718 1718 718" HEIGHT="51" HPOS="276" ID="tl_10" VPOS="667" WIDTH="1442">
<String CONTENT="plus belle et l’obtint. Le succès de ce manège serait le début de la" HEIGHT="51" HPOS="276" ID="string_tl_10" VPOS="667" WIDTH="1442"/>
</TextLine>
<TextLine BASELINE="275 766 859 766" HEIGHT="49" HPOS="275" ID="tl_11" VPOS="717" WIDTH="584">
<String CONTENT="grande entreprise de Lucas." HEIGHT="49" HPOS="275" ID="string_tl_11" VPOS="717" WIDTH="584"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="1040" HPOS="274" ID="r_1_3" VPOS="766" WIDTH="1454">
