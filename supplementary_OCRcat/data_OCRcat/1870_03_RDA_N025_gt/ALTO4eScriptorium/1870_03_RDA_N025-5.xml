<TextLine BASELINE="291 1080 1697 1080" HEIGHT="52" HPOS="291" ID="tl_22" VPOS="1028" WIDTH="1406">
<String CONTENT="Toutes ces pièces sont en français. Est-ce parce que le fabricateur ne" HEIGHT="52" HPOS="291" ID="string_tl_22" VPOS="1028" WIDTH="1406"/>
</TextLine>
<TextLine BASELINE="242 1129 1696 1129" HEIGHT="51" HPOS="242" ID="tl_23" VPOS="1078" WIDTH="1454">
<String CONTENT="connaissait pas d’autre langue? Pas du tout : C’est que maître Rabe¬" HEIGHT="51" HPOS="242" ID="string_tl_23" VPOS="1078" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="245 1178 1694 1178" HEIGHT="51" HPOS="245" ID="tl_24" VPOS="1127" WIDTH="1449">
<String CONTENT="lais, un grand amateur d’autographes, comme chacun sait, avait trouvé," HEIGHT="51" HPOS="245" ID="string_tl_24" VPOS="1127" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="243 1228 1696 1228" HEIGHT="52" HPOS="243" ID="tl_25" VPOS="1176" WIDTH="1453">
<String CONTENT="dans l’abbaye de Tours, une collection précieuse de documents, com¬" HEIGHT="52" HPOS="243" ID="string_tl_25" VPOS="1176" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="246 1278 1699 1278" HEIGHT="51" HPOS="246" ID="tl_26" VPOS="1227" WIDTH="1453">
<String CONTENT="mencée par Alcuin, en avait fait faire des copies et des traductions, les" HEIGHT="51" HPOS="246" ID="string_tl_26" VPOS="1227" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="245 1328 1698 1328" HEIGHT="52" HPOS="245" ID="tl_27" VPOS="1276" WIDTH="1453">
<String CONTENT="avait renfermées précieusement dans son ermitage de Langey, d’où" HEIGHT="52" HPOS="245" ID="string_tl_27" VPOS="1276" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="246 1376 1698 1376" HEIGHT="51" HPOS="246" ID="tl_28" VPOS="1325" WIDTH="1452">
<String CONTENT="elles avaient passé entre les mains de l'intendant Foucault, au com¬" HEIGHT="51" HPOS="246" ID="string_tl_28" VPOS="1325" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="249 1426 1698 1426" HEIGHT="51" HPOS="249" ID="tl_29" VPOS="1375" WIDTH="1449">
<String CONTENT="mencement du dernier siècle. Tel est du moins le conte fait par Lucas" HEIGHT="51" HPOS="249" ID="string_tl_29" VPOS="1375" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="248 1475 1699 1475" HEIGHT="50" HPOS="248" ID="tl_30" VPOS="1425" WIDTH="1451">
<String CONTENT="à M. Chasles, qui l’a révélé dans la séance de l’Académie des Sciences" HEIGHT="50" HPOS="248" ID="string_tl_30" VPOS="1425" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="247 1526 1700 1526" HEIGHT="51" HPOS="247" ID="tl_31" VPOS="1475" WIDTH="1453">
<String CONTENT="du 13 septembre ( v. notre n° 23). Des copies, mais des copies de quoi?" HEIGHT="51" HPOS="247" ID="string_tl_31" VPOS="1475" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="248 1575 1699 1575" HEIGHT="51" HPOS="248" ID="tl_32" VPOS="1524" WIDTH="1451">
<String CONTENT="Voilà, ce nous semble, ce qu’aurait dû se demander M. Chasles. Une" HEIGHT="51" HPOS="248" ID="string_tl_32" VPOS="1524" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="248 1625 1696 1625" HEIGHT="51" HPOS="248" ID="tl_33" VPOS="1574" WIDTH="1448">
<String CONTENT="copie suppose un original ; or, si l’original est chimérique, impossible," HEIGHT="51" HPOS="248" ID="string_tl_33" VPOS="1574" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="251 1675 1699 1675" HEIGHT="51" HPOS="251" ID="tl_34" VPOS="1624" WIDTH="1448">
<String CONTENT="la copie l’est également. Mais M. Chasles se flattait même d’avoir les" HEIGHT="51" HPOS="251" ID="string_tl_34" VPOS="1624" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="250 1725 1700 1725" HEIGHT="51" HPOS="250" ID="tl_35" VPOS="1674" WIDTH="1450">
<String CONTENT="originaux avec les copies, car il dit, dans l'interrogatoire : « Souvent" HEIGHT="51" HPOS="250" ID="string_tl_35" VPOS="1674" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="252 1774 1699 1774" HEIGHT="50" HPOS="252" ID="tl_36" VPOS="1724" WIDTH="1447">
<String CONTENT="il m’apportait des lettres autographes par centaines; il y eu avait de" HEIGHT="50" HPOS="252" ID="string_tl_36" VPOS="1724" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="249 1824 1699 1824" HEIGHT="51" HPOS="249" ID="tl_37" VPOS="1773" WIDTH="1450">
<String CONTENT="doubles, de triples, de quadruples; il me disait que c’était des copies" HEIGHT="51" HPOS="249" ID="string_tl_37" VPOS="1773" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="250 1872 1699 1872" HEIGHT="50" HPOS="250" ID="tl_38" VPOS="1822" WIDTH="1449">
<String CONTENT="de celle qu’il me présentait pour être l’original. Cela m’était bien" HEIGHT="50" HPOS="250" ID="string_tl_38" VPOS="1822" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="249 1922 1699 1922" HEIGHT="50" HPOS="249" ID="tl_39" VPOS="1872" WIDTH="1450">
<String CONTENT="égal d’avoir des copies; du moment que je tenais l’original, il était tout" HEIGHT="50" HPOS="249" ID="string_tl_39" VPOS="1872" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="250 1973 1247 1973" HEIGHT="51" HPOS="250" ID="tl_40" VPOS="1922" WIDTH="997">
<String CONTENT="simple d’admettre qu’on en eut fait des copies. »" HEIGHT="51" HPOS="250" ID="string_tl_40" VPOS="1922" WIDTH="997"/>
</TextLine>
