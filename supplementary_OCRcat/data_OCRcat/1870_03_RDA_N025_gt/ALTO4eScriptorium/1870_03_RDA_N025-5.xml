<TextLine BASELINE="303 2022 1701 2022" HEIGHT="51" HPOS="303" ID="tl_41" VPOS="1971" WIDTH="1398">
<String CONTENT="La confiance de M. Chasles se comprend, car le rusé Lucas avait sé¬" HEIGHT="51" HPOS="303" ID="string_tl_41" VPOS="1971" WIDTH="1398"/>
</TextLine>
<TextLine BASELINE="251 2071 1699 2071" HEIGHT="50" HPOS="251" ID="tl_42" VPOS="2021" WIDTH="1448">
<String CONTENT="rieusement abordé l’original ancien. « Les caractères de l’écriture, dit" HEIGHT="50" HPOS="251" ID="string_tl_42" VPOS="2021" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="251 2122 1699 2122" HEIGHT="51" HPOS="251" ID="tl_43" VPOS="2071" WIDTH="1448">
<String CONTENT="le réquisitoire, sont imités grossièrement d’écritures anciennes. Pour" HEIGHT="51" HPOS="251" ID="string_tl_43" VPOS="2071" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="253 2171 1700 2171" HEIGHT="51" HPOS="253" ID="tl_44" VPOS="2120" WIDTH="1447">
<String CONTENT="fabriquer les lettres de Charlemagne et de ses contemporains, le faus¬" HEIGHT="51" HPOS="253" ID="string_tl_44" VPOS="2120" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="253 2221 1701 2221" HEIGHT="51" HPOS="253" ID="tl_45" VPOS="2170" WIDTH="1448">
<String CONTENT="saire, prenant pour modèle les diplômes des huitième et neuvième" HEIGHT="51" HPOS="253" ID="string_tl_45" VPOS="2170" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="252 2271 1701 2271" HEIGHT="51" HPOS="252" ID="tl_46" VPOS="2220" WIDTH="1449">
<String CONTENT="siècles, a lait usage des caractères allongés qui sont spéciaux à cette" HEIGHT="51" HPOS="252" ID="string_tl_46" VPOS="2220" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="253 2320 1698 2320" HEIGHT="50" HPOS="253" ID="tl_47" VPOS="2270" WIDTH="1445">
<String CONTENT="époque ». Il suffisait, pourtant, pour reconnaître la supercherie," HEIGHT="50" HPOS="253" ID="string_tl_47" VPOS="2270" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="253 2371 1701 2371" HEIGHT="52" HPOS="253" ID="tl_48" VPOS="2319" WIDTH="1448">
<String CONTENT="d’examiner un peu le papier, relativement très-moderne. En y regar¬" HEIGHT="52" HPOS="253" ID="string_tl_48" VPOS="2319" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="255 2420 1703 2420" HEIGHT="50" HPOS="255" ID="tl_49" VPOS="2370" WIDTH="1448">
<String CONTENT="dant de plus près, M. Chasles eut éclaté de rire, en voyant une lettre" HEIGHT="50" HPOS="255" ID="string_tl_49" VPOS="2370" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="256 2469 1699 2469" HEIGHT="49" HPOS="256" ID="tl_50" VPOS="2420" WIDTH="1443">
<String CONTENT="signée Charles-Quinte et une de Charlemagne signée Carlo Magno," HEIGHT="49" HPOS="256" ID="string_tl_50" VPOS="2420" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="261 2520 1707 2520" HEIGHT="51" HPOS="261" ID="tl_51" VPOS="2469" WIDTH="1446">
<String CONTENT="« tout comme il y a Ludovico Magno à la porte Saint-Denis ». remarque" HEIGHT="51" HPOS="261" ID="string_tl_51" VPOS="2469" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="259 2558 897 2558" HEIGHT="39" HPOS="259" ID="tl_52" VPOS="2519" WIDTH="638">
<String CONTENT="finement le défenseur de Lucas." HEIGHT="39" HPOS="259" ID="string_tl_52" VPOS="2519" WIDTH="638"/>
</TextLine>
