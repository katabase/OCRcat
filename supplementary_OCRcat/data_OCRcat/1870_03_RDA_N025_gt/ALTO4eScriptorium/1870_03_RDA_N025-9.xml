<TextLine BASELINE="298 2552 1466 2552" HEIGHT="41" HPOS="298" ID="tl_49" VPOS="2511" WIDTH="1168">
<String CONTENT="Agréez, monsieur, l'expression de ma considération la plus distinguée." HEIGHT="41" HPOS="298" ID="string_tl_49" VPOS="2511" WIDTH="1168"/>
