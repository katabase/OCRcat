<TextLine BASELINE="307 299 1707 299" HEIGHT="55" HPOS="307" ID="tl_2" VPOS="244" WIDTH="1400">
<String CONTENT="Voilà donc deux dupes, indépendamment de M. Chasles : un employé" HEIGHT="55" HPOS="307" ID="string_tl_2" VPOS="244" WIDTH="1400"/>
</TextLine>
<TextLine BASELINE="256 348 1706 348" HEIGHT="54" HPOS="256" ID="tl_3" VPOS="294" WIDTH="1450">
<String CONTENT="de ministère, que l'on ne nomme pas, et le marquis Duprat. Le mar¬" HEIGHT="54" HPOS="256" ID="string_tl_3" VPOS="294" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="256 398 1706 398" HEIGHT="53" HPOS="256" ID="tl_4" VPOS="345" WIDTH="1450">
<String CONTENT="quis avait été pris par son faible, un peu comme M. Chasles; mais il" HEIGHT="53" HPOS="256" ID="string_tl_4" VPOS="345" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="257 448 1710 448" HEIGHT="53" HPOS="257" ID="tl_5" VPOS="395" WIDTH="1453">
<String CONTENT="était plus excusable, n’étant pas amateur d’autographes et ne con¬" HEIGHT="53" HPOS="257" ID="string_tl_5" VPOS="395" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="258 486 855 486" HEIGHT="42" HPOS="258" ID="tl_6" VPOS="444" WIDTH="597">
<String CONTENT="naissant rien à ces choses-là." HEIGHT="42" HPOS="258" ID="string_tl_6" VPOS="444" WIDTH="597"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="352" HPOS="255" ID="r_2_2" VPOS="492" WIDTH="1458">
<Shape>
<Polygon POINTS="255 492 1713 492 1713 844 255 844"/>
</Shape>
<TextLine BASELINE="306 546 1709 546" HEIGHT="53" HPOS="306" ID="tl_7" VPOS="493" WIDTH="1403">
<String CONTENT="Quand nous avons su que Lucas avait été employé chez Letellier" HEIGHT="53" HPOS="306" ID="string_tl_7" VPOS="493" WIDTH="1403"/>
</TextLine>
<TextLine BASELINE="256 596 1709 596" HEIGHT="53" HPOS="256" ID="tl_8" VPOS="543" WIDTH="1453">
<String CONTENT="et qu’il avait fabriqué, y étant, deux lettres de Montaigne, un soupçon" HEIGHT="53" HPOS="256" ID="string_tl_8" VPOS="543" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="259 647 1710 647" HEIGHT="52" HPOS="259" ID="tl_9" VPOS="595" WIDTH="1451">
<String CONTENT="nous a traversé l’esprit : ne serait-ce pas lui qui aurait aussi perpétré" HEIGHT="52" HPOS="259" ID="string_tl_9" VPOS="595" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="259 696 1711 696" HEIGHT="53" HPOS="259" ID="tl_10" VPOS="643" WIDTH="1452">
<String CONTENT="les faux autographes sortis de cette officine et dont l’apparition fit" HEIGHT="53" HPOS="259" ID="string_tl_10" VPOS="643" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="257 755 1712 755" HEIGHT="63" HPOS="257" ID="tl_11" VPOS="692" WIDTH="1455">
<String CONTENT="tant de bruit? Le rapprochement des dates ne permettait pas de s’ar¬" HEIGHT="63" HPOS="257" ID="string_tl_11" VPOS="692" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="257 794 1711 794" HEIGHT="52" HPOS="257" ID="tl_12" VPOS="742" WIDTH="1454">
<String CONTENT="rêter à celle idée : la vente des autographes Letellier remonte à" HEIGHT="52" HPOS="257" ID="string_tl_12" VPOS="742" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="263 843 1217 843" HEIGHT="52" HPOS="263" ID="tl_13" VPOS="791" WIDTH="954">
<String CONTENT="1846, et Lucas n’est venu à Paris qu’en 1852." HEIGHT="52" HPOS="263" ID="string_tl_13" VPOS="791" WIDTH="954"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="1099" HPOS="256" ID="r_2_3" VPOS="842" WIDTH="1463">
<Shape>
<Polygon POINTS="256 842 1719 842 1719 1941 256 1941"/>
</Shape>
<TextLine BASELINE="307 895 1711 895" HEIGHT="52" HPOS="307" ID="tl_14" VPOS="843" WIDTH="1404">
<String CONTENT="Celle collection Letellier, nous y avons cru longtemps. Nous par¬" HEIGHT="52" HPOS="307" ID="string_tl_14" VPOS="843" WIDTH="1404"/>
</TextLine>
<TextLine BASELINE="260 944 1712 944" HEIGHT="52" HPOS="260" ID="tl_15" VPOS="892" WIDTH="1452">
<String CONTENT="tagions la conviction des experts les plus habiles et de la bonne" HEIGHT="52" HPOS="260" ID="string_tl_15" VPOS="892" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="258 994 1712 994" HEIGHT="53" HPOS="258" ID="tl_16" VPOS="941" WIDTH="1454">
<String CONTENT="foi la plus éprouvée, appuyée sur les affirmations d’un archiviste" HEIGHT="53" HPOS="258" ID="string_tl_16" VPOS="941" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="258 1042 1712 1042" HEIGHT="51" HPOS="258" ID="tl_17" VPOS="991" WIDTH="1454">
<String CONTENT="paléographe dont la science et l’honnêteté étaient universellement" HEIGHT="51" HPOS="258" ID="string_tl_17" VPOS="991" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="257 1093 1714 1093" HEIGHT="50" HPOS="257" ID="tl_18" VPOS="1043" WIDTH="1457">
<String CONTENT="reconnues. Nous avons même rompu en faveur de ces pièces maintes" HEIGHT="50" HPOS="257" ID="string_tl_18" VPOS="1043" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="259 1141 1716 1141" HEIGHT="51" HPOS="259" ID="tl_19" VPOS="1090" WIDTH="1457">
<String CONTENT="lances dans l'Amateur d’autographes. Eh bien, notre foi s’est ébran¬" HEIGHT="51" HPOS="259" ID="string_tl_19" VPOS="1090" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="259 1194 1712 1194" HEIGHT="53" HPOS="259" ID="tl_20" VPOS="1141" WIDTH="1453">
<String CONTENT="lée. L’année dernière, nous avons assisté, à Londres, aux deux grandes" HEIGHT="53" HPOS="259" ID="string_tl_20" VPOS="1141" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="259 1242 1714 1242" HEIGHT="51" HPOS="259" ID="tl_21" VPOS="1191" WIDTH="1455">
<String CONTENT="ventes Young et Dillon. Nous y avons trouvé un certain nombre de" HEIGHT="51" HPOS="259" ID="string_tl_21" VPOS="1191" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="260 1291 1710 1291" HEIGHT="51" HPOS="260" ID="tl_22" VPOS="1240" WIDTH="1450">
<String CONTENT="lettres, de Diane de Poitiers, de Marie Stuart, François II. etc.," HEIGHT="51" HPOS="260" ID="string_tl_22" VPOS="1240" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="259 1343 1714 1343" HEIGHT="53" HPOS="259" ID="tl_23" VPOS="1290" WIDTH="1455">
<String CONTENT="qui étaient évidemment fausses. C’est en les comparant que nous" HEIGHT="53" HPOS="259" ID="string_tl_23" VPOS="1290" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="259 1392 1714 1392" HEIGHT="50" HPOS="259" ID="tl_24" VPOS="1342" WIDTH="1455">
<String CONTENT="avons pu nous en convaincre : elles ont un aspect uniforme et un air" HEIGHT="50" HPOS="259" ID="string_tl_24" VPOS="1342" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="258 1443 1714 1443" HEIGHT="53" HPOS="258" ID="tl_25" VPOS="1390" WIDTH="1456">
<String CONTENT="de parenté qui ne permettent pas de s’y méprendre. Sans doute ces" HEIGHT="53" HPOS="258" ID="string_tl_25" VPOS="1390" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="259 1492 1715 1492" HEIGHT="52" HPOS="259" ID="tl_26" VPOS="1440" WIDTH="1456">
<String CONTENT="faux sont beaucoup mieux faits que ceux de Lucas : l’écriture est" HEIGHT="52" HPOS="259" ID="string_tl_26" VPOS="1440" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="260 1543 1714 1543" HEIGHT="52" HPOS="260" ID="tl_27" VPOS="1491" WIDTH="1454">
<String CONTENT="parfaitement imitée, peine que ne s’est pas donnée Lucas; les papiers" HEIGHT="52" HPOS="260" ID="string_tl_27" VPOS="1491" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="258 1592 1712 1592" HEIGHT="52" HPOS="258" ID="tl_28" VPOS="1540" WIDTH="1454">
<String CONTENT="sont assez bien appropriés à l'époque. Mais ni cachet ni cotte, ni aucun" HEIGHT="52" HPOS="258" ID="string_tl_28" VPOS="1540" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="258 1642 1717 1642" HEIGHT="53" HPOS="258" ID="tl_29" VPOS="1589" WIDTH="1459">
<String CONTENT="de ces caractères qui distinguent à première vue un original Ajoutez" HEIGHT="53" HPOS="258" ID="string_tl_29" VPOS="1589" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="258 1692 1717 1692" HEIGHT="53" HPOS="258" ID="tl_30" VPOS="1639" WIDTH="1459">
<String CONTENT="à cela une encre pâle et roussâtre, toujours la même pour les diffé¬" HEIGHT="53" HPOS="258" ID="string_tl_30" VPOS="1639" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="258 1741 1715 1741" HEIGHT="51" HPOS="258" ID="tl_31" VPOS="1690" WIDTH="1457">
<String CONTENT="rentes lettres du même fonds. Ce n’est pas à dire que tout ce qui" HEIGHT="51" HPOS="258" ID="string_tl_31" VPOS="1690" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="260 1791 1717 1791" HEIGHT="52" HPOS="260" ID="tl_32" VPOS="1739" WIDTH="1457">
<String CONTENT="vient de ce fonds est faux : il a dû en sortir des pièces parfaitement" HEIGHT="52" HPOS="260" ID="string_tl_32" VPOS="1739" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="259 1841 1717 1841" HEIGHT="52" HPOS="259" ID="tl_33" VPOS="1789" WIDTH="1458">
<String CONTENT="authentiques ; seulement, il faut les distinguer, et cela ne pourrait se" HEIGHT="52" HPOS="259" ID="string_tl_33" VPOS="1789" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="262 1890 1718 1890" HEIGHT="52" HPOS="262" ID="tl_34" VPOS="1838" WIDTH="1456">
<String CONTENT="faire qu’en en réunissant un grand nombre, éparses dans les collections" HEIGHT="52" HPOS="262" ID="string_tl_34" VPOS="1838" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="262 1940 1127 1940" HEIGHT="50" HPOS="262" ID="tl_35" VPOS="1890" WIDTH="865">
<String CONTENT="particulières, et en les examinant de près." HEIGHT="50" HPOS="262" ID="string_tl_35" VPOS="1890" WIDTH="865"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="354" HPOS="253" ID="r_3_1" VPOS="2003" WIDTH="1470">
<Shape>
