</Shape>
<TextLine BASELINE="259 2043 1720 2043" HEIGHT="39" HPOS="259" ID="tl_36" VPOS="2004" WIDTH="1461">
<String CONTENT="phrases, ainsi que je l'ai découvert depuis, dans des auteurs du temps, notamment" HEIGHT="39" HPOS="259" ID="string_tl_36" VPOS="2004" WIDTH="1461"/>
</TextLine>
<TextLine BASELINE="259 2082 1719 2082" HEIGHT="45" HPOS="259" ID="tl_37" VPOS="2037" WIDTH="1460">
<String CONTENT="l'Histoire de quatre Rois par de Serres (1595). Cet emprunt de style contemporain," HEIGHT="45" HPOS="259" ID="string_tl_37" VPOS="2037" WIDTH="1460"/>
</TextLine>
<TextLine BASELINE="255 2120 1716 2120" HEIGHT="38" HPOS="255" ID="tl_38" VPOS="2082" WIDTH="1461">
<String CONTENT="en des lettres purement de récit et de faits, et qui ne comportaient guère le déploiement d’un" HEIGHT="38" HPOS="255" ID="string_tl_38" VPOS="2082" WIDTH="1461"/>
</TextLine>
<TextLine BASELINE="255 2160 1720 2160" HEIGHT="39" HPOS="255" ID="tl_39" VPOS="2121" WIDTH="1465">
<String CONTENT="style caractéristique, donnait aux deux pièces une vraisemblance que la connaissance, acquise" HEIGHT="39" HPOS="255" ID="string_tl_39" VPOS="2121" WIDTH="1465"/>
</TextLine>
<TextLine BASELINE="257 2199 1715 2199" HEIGHT="40" HPOS="257" ID="tl_40" VPOS="2159" WIDTH="1458">
<String CONTENT="par moi, plus tard, des textes de Serres pouvait seule faire évanouir. Je m'empressai de" HEIGHT="40" HPOS="257" ID="string_tl_40" VPOS="2159" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="257 2237 1720 2237" HEIGHT="38" HPOS="257" ID="tl_41" VPOS="2199" WIDTH="1463">
<String CONTENT="donner connaissance de ma découverte à M. le docteur Payen, à M. Duprat et à un" HEIGHT="38" HPOS="257" ID="string_tl_41" VPOS="2199" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="254 2277 1721 2277" HEIGHT="39" HPOS="254" ID="tl_42" VPOS="2238" WIDTH="1467">
<String CONTENT="jeune professeur du collège de France, qui se proposait, après avoir fait un cours sur" HEIGHT="39" HPOS="254" ID="string_tl_42" VPOS="2238" WIDTH="1467"/>
</TextLine>
<TextLine BASELINE="257 2317 1722 2317" HEIGHT="40" HPOS="257" ID="tl_43" VPOS="2277" WIDTH="1465">
<String CONTENT="Montaigne, de publier un livre sur ce grand écrivain. Mais le siège de M. Duprat était" HEIGHT="40" HPOS="257" ID="string_tl_43" VPOS="2277" WIDTH="1465"/>
</TextLine>
<TextLine BASELINE="257 2356 899 2356" HEIGHT="39" HPOS="257" ID="tl_44" VPOS="2317" WIDTH="642">
<String CONTENT="fait, et il venait de publier ses Glanes." HEIGHT="39" HPOS="257" ID="string_tl_44" VPOS="2317" WIDTH="642"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="158" HPOS="256" ID="r_3_2" VPOS="2354" WIDTH="1467">
<Shape>
<Polygon POINTS="256 2354 1723 2354 1723 2512 256 2512"/>
</Shape>
<TextLine BASELINE="295 2395 1720 2395" HEIGHT="40" HPOS="295" ID="tl_45" VPOS="2355" WIDTH="1425">
<String CONTENT="En résumé, il n'est donc pas exact de dire que M. Lucas ait fait, en cette rencontre," HEIGHT="40" HPOS="295" ID="string_tl_45" VPOS="2355" WIDTH="1425"/>
</TextLine>
<TextLine BASELINE="257 2434 1720 2434" HEIGHT="40" HPOS="257" ID="tl_46" VPOS="2394" WIDTH="1463">
<String CONTENT="du Montaigne, comme jadis on faisait du Saint-Evremont : il a seulement mis le nom" HEIGHT="40" HPOS="257" ID="string_tl_46" VPOS="2394" WIDTH="1463"/>
</TextLine>
<TextLine BASELINE="257 2473 1722 2473" HEIGHT="39" HPOS="257" ID="tl_47" VPOS="2434" WIDTH="1465">
<String CONTENT="de Montaigne à une compilation adroite, faite d’après des contemporains de l'illustra" HEIGHT="39" HPOS="257" ID="string_tl_47" VPOS="2434" WIDTH="1465"/>
</TextLine>
<TextLine BASELINE="259 2511 480 2511" HEIGHT="39" HPOS="259" ID="tl_48" VPOS="2472" WIDTH="221">
<String CONTENT="Périgourdain." HEIGHT="39" HPOS="259" ID="string_tl_48" VPOS="2472" WIDTH="221"/>
</TextLine>
</TextBlock>
