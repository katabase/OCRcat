</Shape>
<TextLine BASELINE="317 1055 1718 1055" HEIGHT="51" HPOS="317" ID="tl_17" VPOS="1004" WIDTH="1401">
<String CONTENT="Le défenseur, revenant sur les faits qui se passaient lorsque Lucas" HEIGHT="51" HPOS="317" ID="string_tl_17" VPOS="1004" WIDTH="1401"/>
</TextLine>
<TextLine BASELINE="266 1099 1718 1099" HEIGHT="47" HPOS="266" ID="tl_18" VPOS="1052" WIDTH="1452">
<String CONTENT="était encore chez M. Letellier, raconte « comment, cédant aux sollicita¬" HEIGHT="47" HPOS="266" ID="string_tl_18" VPOS="1052" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="268 1154 1720 1154" HEIGHT="52" HPOS="268" ID="tl_19" VPOS="1102" WIDTH="1452">
<String CONTENT="tions d’un vieux marquis, entiché de noblesse, Lucas fabriqua des" HEIGHT="52" HPOS="268" ID="string_tl_19" VPOS="1102" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="267 1203 1718 1203" HEIGHT="51" HPOS="267" ID="tl_20" VPOS="1152" WIDTH="1451">
<String CONTENT="lettres de Montaigne, que M. Feuillet de Couches a insérées dans son" HEIGHT="51" HPOS="267" ID="string_tl_20" VPOS="1152" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="267 1247 1719 1247" HEIGHT="45" HPOS="267" ID="tl_21" VPOS="1202" WIDTH="1452">
<String CONTENT="troisième volume des Causeries d'un curieux, se contentant de remar¬" HEIGHT="45" HPOS="267" ID="string_tl_21" VPOS="1202" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="266 1301 1716 1301" HEIGHT="50" HPOS="266" ID="tl_22" VPOS="1251" WIDTH="1450">
<String CONTENT="quer que le style de Montaigne était un peu négligé dans ces deux" HEIGHT="50" HPOS="266" ID="string_tl_22" VPOS="1251" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="266 1351 713 1351" HEIGHT="51" HPOS="266" ID="tl_23" VPOS="1300" WIDTH="447">
<String CONTENT="lettres inédites. » (1)." HEIGHT="51" HPOS="266" ID="string_tl_23" VPOS="1300" WIDTH="447"/>
</TextLine>
