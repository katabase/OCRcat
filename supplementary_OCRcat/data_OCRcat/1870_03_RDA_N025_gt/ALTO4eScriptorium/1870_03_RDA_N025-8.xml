<TextLine BASELINE="315 806 1716 806" HEIGHT="49" HPOS="315" ID="tl_12" VPOS="757" WIDTH="1401">
<String CONTENT="Autres dupes de Lucas. —Cette question est peut-être la plus grave, à" HEIGHT="49" HPOS="315" ID="string_tl_12" VPOS="757" WIDTH="1401"/>
</TextLine>
<TextLine BASELINE="265 857 1717 857" HEIGHT="52" HPOS="265" ID="tl_13" VPOS="805" WIDTH="1452">
<String CONTENT="notre point de vue, du moins. Le président ayant demandé à M. B. Bordier" HEIGHT="52" HPOS="265" ID="string_tl_13" VPOS="805" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="263 906 1715 906" HEIGHT="52" HPOS="263" ID="tl_14" VPOS="854" WIDTH="1452">
<String CONTENT="si le prévenu a vendu à d’autres qu'à M. Chasles, il a répondu : « On" HEIGHT="52" HPOS="263" ID="string_tl_14" VPOS="854" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="267 956 1714 956" HEIGHT="51" HPOS="267" ID="tl_15" VPOS="905" WIDTH="1447">
<String CONTENT="m'a cité deux exemples: M. le marquis Duprat et un employé de je ne" HEIGHT="51" HPOS="267" ID="string_tl_15" VPOS="905" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="265 1004 804 1004" HEIGHT="49" HPOS="265" ID="tl_16" VPOS="955" WIDTH="539">
<String CONTENT="sais plus quel ministère. »" HEIGHT="49" HPOS="265" ID="string_tl_16" VPOS="955" WIDTH="539"/>
</TextLine>
</TextBlock>
