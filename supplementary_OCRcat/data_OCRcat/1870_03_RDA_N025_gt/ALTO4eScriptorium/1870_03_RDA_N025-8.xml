<TextLine BASELINE="317 495 1705 495" HEIGHT="52" HPOS="317" ID="tl_6" VPOS="443" WIDTH="1388">
<String CONTENT="Une remarque essentielle, et qui n’a pas été faite, que nous sachions," HEIGHT="52" HPOS="317" ID="string_tl_6" VPOS="443" WIDTH="1388"/>
</TextLine>
<TextLine BASELINE="262 544 1712 544" HEIGHT="53" HPOS="262" ID="tl_7" VPOS="491" WIDTH="1450">
<String CONTENT="dans le cours des débats, c’est qu’il est certain que pas une seule des" HEIGHT="53" HPOS="262" ID="string_tl_7" VPOS="491" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="265 593 1711 593" HEIGHT="50" HPOS="265" ID="tl_8" VPOS="543" WIDTH="1446">
<String CONTENT="pièces reconnues pour vraies par les experts, n’a rapport aux discus¬" HEIGHT="50" HPOS="265" ID="string_tl_8" VPOS="543" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="263 632 1713 632" HEIGHT="42" HPOS="263" ID="tl_9" VPOS="590" WIDTH="1450">
