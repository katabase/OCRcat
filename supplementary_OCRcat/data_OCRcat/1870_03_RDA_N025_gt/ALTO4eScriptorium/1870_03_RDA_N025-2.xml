<TextLine BASELINE="315 381 1760 381" HEIGHT="52" HPOS="315" ID="tl_2" VPOS="329" WIDTH="1445">
<String CONTENT="brillante qui n’a pas duré moins de deux heures. Le ministère public" HEIGHT="52" HPOS="315" ID="string_tl_2" VPOS="329" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="312 431 1761 431" HEIGHT="53" HPOS="312" ID="tl_3" VPOS="378" WIDTH="1449">
<String CONTENT="a répliqué. M. Chasles a été rappelé pour quelques explications. Comme" HEIGHT="53" HPOS="312" ID="string_tl_3" VPOS="378" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="314 480 1759 480" HEIGHT="52" HPOS="314" ID="tl_4" VPOS="428" WIDTH="1445">
<String CONTENT="il parlait des trois cents premières lettres de Galilée que Lucas lui" HEIGHT="52" HPOS="314" ID="string_tl_4" VPOS="428" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="312 530 1761 530" HEIGHT="53" HPOS="312" ID="tl_5" VPOS="477" WIDTH="1449">
<String CONTENT="avait livrées d’abord, le président a dit en passant : «C'était déjà" HEIGHT="53" HPOS="312" ID="string_tl_5" VPOS="477" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="313 578 1755 578" HEIGHT="51" HPOS="313" ID="tl_6" VPOS="527" WIDTH="1442">
<String CONTENT="beaucoup trop », ce qui a excité une hilarité générale dans la salle." HEIGHT="51" HPOS="313" ID="string_tl_6" VPOS="527" WIDTH="1442"/>
</TextLine>
<TextLine BASELINE="313 627 1760 627" HEIGHT="51" HPOS="313" ID="tl_7" VPOS="576" WIDTH="1447">
<String CONTENT="Après une courte réplique du défenseur, le Tribunal s’est retiré dans" HEIGHT="51" HPOS="313" ID="string_tl_7" VPOS="576" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="314 681 1759 681" HEIGHT="55" HPOS="314" ID="tl_8" VPOS="626" WIDTH="1445">
<String CONTENT="la chambre des délibérations, d’où il a rapporté un verdict condam¬" HEIGHT="55" HPOS="314" ID="string_tl_8" VPOS="626" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="313 726 1760 726" HEIGHT="50" HPOS="313" ID="tl_9" VPOS="676" WIDTH="1447">
<String CONTENT="nant Vrain-Lucas à deux ans d’emprisonnement, 500 fr. d'amende et" HEIGHT="50" HPOS="313" ID="string_tl_9" VPOS="676" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="311 774 550 774" HEIGHT="49" HPOS="311" ID="tl_10" VPOS="725" WIDTH="239">
<String CONTENT="aux dépens." HEIGHT="49" HPOS="311" ID="string_tl_10" VPOS="725" WIDTH="239"/>
</TextLine>
</TextBlock>
