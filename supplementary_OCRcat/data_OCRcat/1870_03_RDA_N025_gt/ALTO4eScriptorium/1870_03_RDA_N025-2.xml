<TextLine BASELINE="358 1141 1757 1141" HEIGHT="61" HPOS="358" ID="tl_17" VPOS="1080" WIDTH="1399">
<String CONTENT="Notice sur Lucas. — Il est âgé de 52 ans. Fils d’un journalier de" HEIGHT="61" HPOS="358" ID="string_tl_17" VPOS="1080" WIDTH="1399"/>
</TextLine>
<TextLine BASELINE="307 1184 1751 1184" HEIGHT="51" HPOS="307" ID="tl_18" VPOS="1133" WIDTH="1444">
<String CONTENT="Lanneray, près de Châteaudun, il ne reçut qu’une instruction primaire," HEIGHT="51" HPOS="307" ID="string_tl_18" VPOS="1133" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="305 1233 1753 1233" HEIGHT="52" HPOS="305" ID="tl_19" VPOS="1181" WIDTH="1448">
<String CONTENT="travailla chez un avoué et au greffe des hypothèques de cette ville. Il" HEIGHT="52" HPOS="305" ID="string_tl_19" VPOS="1181" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="304 1283 1755 1283" HEIGHT="51" HPOS="304" ID="tl_20" VPOS="1232" WIDTH="1451">
<String CONTENT="montrait beaucoup de goût pour l’étude, et fréquentait assidûment" HEIGHT="51" HPOS="304" ID="string_tl_20" VPOS="1232" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="303 1333 1753 1333" HEIGHT="52" HPOS="303" ID="tl_21" VPOS="1281" WIDTH="1450">
<String CONTENT="la bibliothèque publique. Venu à Paris en 1852, il brigua un emploi" HEIGHT="52" HPOS="303" ID="string_tl_21" VPOS="1281" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="302 1383 1756 1383" HEIGHT="52" HPOS="302" ID="tl_22" VPOS="1331" WIDTH="1454">
<String CONTENT="à la Bibliothèque impériale ; mais il fut repoussé, faute d’un diplôme" HEIGHT="52" HPOS="302" ID="string_tl_22" VPOS="1331" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="302 1432 1752 1432" HEIGHT="52" HPOS="302" ID="tl_23" VPOS="1380" WIDTH="1450">
<String CONTENT="de bachelier. Son ignorance du latin lui fit également refuser un emploi" HEIGHT="52" HPOS="302" ID="string_tl_23" VPOS="1380" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="300 1479 1757 1479" HEIGHT="49" HPOS="300" ID="tl_24" VPOS="1430" WIDTH="1457">
<String CONTENT="dans une librairie ancienne importante. « A ce moment, lit-on dans le" HEIGHT="49" HPOS="300" ID="string_tl_24" VPOS="1430" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="300 1531 1755 1531" HEIGHT="53" HPOS="300" ID="tl_25" VPOS="1478" WIDTH="1455">
<String CONTENT="réquisitoire, un malheureux hasard l’a mis en rapport avec le directeur" HEIGHT="53" HPOS="300" ID="string_tl_25" VPOS="1478" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="300 1585 1753 1585" HEIGHT="57" HPOS="300" ID="tl_26" VPOS="1528" WIDTH="1453">
<String CONTENT="d’un cabinet généalogique d'un triste renom, le cabinet Letellier," HEIGHT="57" HPOS="300" ID="string_tl_26" VPOS="1528" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="300 1628 1756 1628" HEIGHT="51" HPOS="300" ID="tl_27" VPOS="1577" WIDTH="1456">
<String CONTENT="ancien cabinet Courtois. C’est là, évidemment, que Lucas s’est perdu" HEIGHT="51" HPOS="300" ID="string_tl_27" VPOS="1577" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="301 1678 1755 1678" HEIGHT="51" HPOS="301" ID="tl_28" VPOS="1627" WIDTH="1454">
<String CONTENT="et qu’il est devenu ce qu’il est actuellement ^ C’est là en effet qu’il" HEIGHT="51" HPOS="301" ID="string_tl_28" VPOS="1627" WIDTH="1454"/>
</TextLine>
<TextLine BASELINE="301 1728 1752 1728" HEIGHT="52" HPOS="301" ID="tl_29" VPOS="1676" WIDTH="1451">
<String CONTENT="fabriqua les deux lettres de Montaigne dont il sera parlé plus loin." HEIGHT="52" HPOS="301" ID="string_tl_29" VPOS="1676" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="303 1777 1755 1777" HEIGHT="52" HPOS="303" ID="tl_30" VPOS="1725" WIDTH="1452">
<String CONTENT="Lucas fréquentait les cours de MM. Damiron, Lenormand et Géruzez," HEIGHT="52" HPOS="303" ID="string_tl_30" VPOS="1725" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="300 1827 1756 1827" HEIGHT="53" HPOS="300" ID="tl_31" VPOS="1774" WIDTH="1456">
<String CONTENT="et employait le reste de ses loisirs dans les bibliothèques. Lors de son" HEIGHT="53" HPOS="300" ID="string_tl_31" VPOS="1774" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="298 1875 1757 1875" HEIGHT="51" HPOS="298" ID="tl_32" VPOS="1824" WIDTH="1459">
<String CONTENT="arrestation, Lucas était surveillé depuis un mois par la police. Il occu¬" HEIGHT="51" HPOS="298" ID="string_tl_32" VPOS="1824" WIDTH="1459"/>
</TextLine>
<TextLine BASELINE="301 1926 1759 1926" HEIGHT="53" HPOS="301" ID="tl_33" VPOS="1873" WIDTH="1458">
<String CONTENT="pait un petit appartement, rue Saint-Georges, avec sa maîtresse (il était" HEIGHT="53" HPOS="301" ID="string_tl_33" VPOS="1873" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="299 1976 1756 1976" HEIGHT="51" HPOS="299" ID="tl_34" VPOS="1925" WIDTH="1457">
<String CONTENT="veuf et père de famille). On avait remarqué qu’il ne sortait de chez lui" HEIGHT="51" HPOS="299" ID="string_tl_34" VPOS="1925" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="300 2025 1755 2025" HEIGHT="52" HPOS="300" ID="tl_35" VPOS="1973" WIDTH="1455">
<String CONTENT="qu’à onze heures, déjeunait au café Riche ou dans une crémerie," HEIGHT="52" HPOS="300" ID="string_tl_35" VPOS="1973" WIDTH="1455"/>
</TextLine>
<TextLine BASELINE="301 2075 1759 2075" HEIGHT="52" HPOS="301" ID="tl_36" VPOS="2023" WIDTH="1458">
<String CONTENT="allait travailler à la Bibliothèque impériale, rentrait chez lui après" HEIGHT="52" HPOS="301" ID="string_tl_36" VPOS="2023" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="302 2125 1760 2125" HEIGHT="53" HPOS="302" ID="tl_37" VPOS="2072" WIDTH="1458">
<String CONTENT="dîner, ne parlait à personne et n’allait que chez M. Chasles. M. le Pré¬" HEIGHT="53" HPOS="302" ID="string_tl_37" VPOS="2072" WIDTH="1458"/>
</TextLine>
<TextLine BASELINE="303 2174 1760 2174" HEIGHT="53" HPOS="303" ID="tl_38" VPOS="2121" WIDTH="1457">
<String CONTENT="sident lui ayant demandé ce qu’il avait fait des 140,000 fr. et plus" HEIGHT="53" HPOS="303" ID="string_tl_38" VPOS="2121" WIDTH="1457"/>
</TextLine>
<TextLine BASELINE="308 2223 1761 2223" HEIGHT="57" HPOS="308" ID="tl_39" VPOS="2166" WIDTH="1453">
<String CONTENT="que lui avait comptés M. Chasles, il a d’abord avoué qu’il avait mis en" HEIGHT="57" HPOS="308" ID="string_tl_39" VPOS="2166" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="305 2272 1449 2272" HEIGHT="50" HPOS="305" ID="tl_40" VPOS="2222" WIDTH="1144">
<String CONTENT="réserve 4 à 5,000 fr., puis il est revenu sur ses aveux." HEIGHT="50" HPOS="305" ID="string_tl_40" VPOS="2222" WIDTH="1144"/>
</TextLine>
</TextBlock>
<TextBlock HEIGHT="403" HPOS="305" ID="r_2_4" VPOS="2284" WIDTH="1459">
<Shape>
<Polygon POINTS="305 2284 1764 2284 1764 2687 305 2687"/>
</Shape>
<TextLine BASELINE="357 2338 1760 2338" HEIGHT="53" HPOS="357" ID="tl_41" VPOS="2285" WIDTH="1403">
<String CONTENT="PREMIERS ACHATS DE M. CHASLES. — Voici ce que dit à ce sujet" HEIGHT="53" HPOS="357" ID="string_tl_41" VPOS="2285" WIDTH="1403"/>
</TextLine>
<TextLine BASELINE="307 2392 1760 2392" HEIGHT="56" HPOS="307" ID="tl_42" VPOS="2336" WIDTH="1453">
<String CONTENT="M Chasles, dans sa déposition ; « Il y a longtemps déjà, plus de huit" HEIGHT="56" HPOS="307" ID="string_tl_42" VPOS="2336" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="306 2436 1758 2436" HEIGHT="51" HPOS="306" ID="tl_43" VPOS="2385" WIDTH="1452">
<String CONTENT="ans, M. Lucas s’est présenté chez moi; il se disait de Châteaudun;" HEIGHT="51" HPOS="306" ID="string_tl_43" VPOS="2385" WIDTH="1452"/>
</TextLine>
<TextLine BASELINE="307 2487 1763 2487" HEIGHT="52" HPOS="307" ID="tl_44" VPOS="2435" WIDTH="1456">
<String CONTENT="comme je suis de Chartres, nous étions presque du même pays, je le" HEIGHT="52" HPOS="307" ID="string_tl_44" VPOS="2435" WIDTH="1456"/>
</TextLine>
<TextLine BASELINE="308 2536 1753 2536" HEIGHT="51" HPOS="308" ID="tl_45" VPOS="2485" WIDTH="1445">
<String CONTENT="reçus. 11 médit qu’il était chargé de placer, de la part d’un collection¬" HEIGHT="51" HPOS="308" ID="string_tl_45" VPOS="2485" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="309 2586 1762 2586" HEIGHT="52" HPOS="309" ID="tl_46" VPOS="2534" WIDTH="1453">
<String CONTENT="neur, une grande quantité de manuscrits et de livres d’une grande" HEIGHT="52" HPOS="309" ID="string_tl_46" VPOS="2534" WIDTH="1453"/>
</TextLine>
<TextLine BASELINE="311 2642 1762 2642" HEIGHT="58" HPOS="311" ID="tl_47" VPOS="2584" WIDTH="1451">
<String CONTENT="valeur, et, tout particulièrement des lettres autographes. La première" HEIGHT="58" HPOS="311" ID="string_tl_47" VPOS="2584" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="312 2686 1760 2686" HEIGHT="54" HPOS="312" ID="tl_48" VPOS="2632" WIDTH="1448">
<String CONTENT="pièce qu’il m’apporta fut une lettre de Molière, qu’il me fit payer" HEIGHT="54" HPOS="312" ID="string_tl_48" VPOS="2632" WIDTH="1448"/>
</TextLine>
