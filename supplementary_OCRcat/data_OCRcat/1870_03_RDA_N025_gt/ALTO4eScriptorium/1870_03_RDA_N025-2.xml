</Shape>
<TextLine BASELINE="360 825 1759 825" HEIGHT="50" HPOS="360" ID="tl_11" VPOS="775" WIDTH="1399">
<String CONTENT="Voilà l'affaire dans toute sa sécheresse. Il n’entre pas dans notre" HEIGHT="50" HPOS="360" ID="string_tl_11" VPOS="775" WIDTH="1399"/>
</TextLine>
<TextLine BASELINE="310 874 1759 874" HEIGHT="50" HPOS="310" ID="tl_12" VPOS="824" WIDTH="1449">
<String CONTENT="cadre d’en rendre un compte régulier, complet, donnant les faits dans" HEIGHT="50" HPOS="310" ID="string_tl_12" VPOS="824" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="311 926 1759 926" HEIGHT="52" HPOS="311" ID="tl_13" VPOS="874" WIDTH="1448">
<String CONTENT="l’ordre où ils se sont déroulés devant le Tribunal. Il nous semble plus" HEIGHT="52" HPOS="311" ID="string_tl_13" VPOS="874" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="311 975 1759 975" HEIGHT="51" HPOS="311" ID="tl_14" VPOS="924" WIDTH="1448">
<String CONTENT="instructif de rappeler les choses les plus intéressantes, en groupant les" HEIGHT="51" HPOS="311" ID="string_tl_14" VPOS="924" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="306 1025 1757 1025" HEIGHT="52" HPOS="306" ID="tl_15" VPOS="973" WIDTH="1451">
<String CONTENT="détails éparpillés dans le rapport des experts, l’interrogatoire, le ré¬" HEIGHT="52" HPOS="306" ID="string_tl_15" VPOS="973" WIDTH="1451"/>
</TextLine>
<TextLine BASELINE="307 1073 832 1073" HEIGHT="50" HPOS="307" ID="tl_16" VPOS="1023" WIDTH="525">
<String CONTENT="quisitoire et la plaidoirie." HEIGHT="50" HPOS="307" ID="string_tl_16" VPOS="1023" WIDTH="525"/>
</TextLine>
