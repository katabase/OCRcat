<TextLine BASELINE="281 742 1675 742" HEIGHT="51" HPOS="281" ID="tl_11" VPOS="691" WIDTH="1394">
<String CONTENT="LES PLAGIATS. — M. l’avocat impérial expose de la manière suivante" HEIGHT="51" HPOS="281" ID="string_tl_11" VPOS="691" WIDTH="1394"/>
</TextLine>
<TextLine BASELINE="228 792 1677 792" HEIGHT="51" HPOS="228" ID="tl_12" VPOS="741" WIDTH="1449">
<String CONTENT="comment Lucas a pu donner à ses autographes une apparence de vérité" HEIGHT="51" HPOS="228" ID="string_tl_12" VPOS="741" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="228 841 1674 841" HEIGHT="51" HPOS="228" ID="tl_13" VPOS="790" WIDTH="1446">
<String CONTENT="qui a dérouté quelque temps le monde savant : « Dans toute son" HEIGHT="51" HPOS="228" ID="string_tl_13" VPOS="790" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="229 891 1677 891" HEIGHT="51" HPOS="229" ID="tl_14" VPOS="840" WIDTH="1448">
<String CONTENT="œuvre, la partie scientifique est celle qui a été le mieux traitée. C’est" HEIGHT="51" HPOS="229" ID="string_tl_14" VPOS="840" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="229 940 1672 940" HEIGHT="51" HPOS="229" ID="tl_15" VPOS="889" WIDTH="1443">
<String CONTENT="qu’en ces matières, Lucas n’a fait usage que d’une scienee d’emprunt." HEIGHT="51" HPOS="229" ID="string_tl_15" VPOS="889" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="226 990 1676 990" HEIGHT="51" HPOS="226" ID="tl_16" VPOS="939" WIDTH="1450">
<String CONTENT="Toutes ces prétendues lettres de Pascal, de Galilée, de Gassendi sont" HEIGHT="51" HPOS="226" ID="string_tl_16" VPOS="939" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="228 1040 1670 1040" HEIGHT="53" HPOS="228" ID="tl_17" VPOS="987" WIDTH="1442">
<String CONTENT="fabriquées à l’aide de fragments découpés dans des traités spéciaux..." HEIGHT="53" HPOS="228" ID="string_tl_17" VPOS="987" WIDTH="1442"/>
</TextLine>
<TextLine BASELINE="228 1087 1675 1087" HEIGHT="50" HPOS="228" ID="tl_18" VPOS="1037" WIDTH="1447">
<String CONTENT="Il a pillé partout : dans les œuvres de Thomas, de Voltaire, de Save-" HEIGHT="50" HPOS="228" ID="string_tl_18" VPOS="1037" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="230 1137 1675 1137" HEIGHT="50" HPOS="230" ID="tl_19" VPOS="1087" WIDTH="1445">
<String CONTENT="rien, de Gerdil, de Fontenelle, du duc de La Vallière, dans le Dic¬" HEIGHT="50" HPOS="230" ID="string_tl_19" VPOS="1087" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="230 1188 1678 1188" HEIGHT="50" HPOS="230" ID="tl_20" VPOS="1138" WIDTH="1448">
<String CONTENT="tionnaire de Chauffepié, dans l'Encyclopédie, etc, etc... Mais la véri¬" HEIGHT="50" HPOS="230" ID="string_tl_20" VPOS="1138" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="230 1237 1674 1237" HEIGHT="52" HPOS="230" ID="tl_21" VPOS="1185" WIDTH="1444">
<String CONTENT="table science lui faisait défaut. Ainsi, il faisait figurer dans des lettres" HEIGHT="52" HPOS="230" ID="string_tl_21" VPOS="1185" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="229 1287 1674 1287" HEIGHT="52" HPOS="229" ID="tl_22" VPOS="1235" WIDTH="1445">
<String CONTENT="de Pascal des nombres exprimant les masses du Soleil, de Jupiter, de" HEIGHT="52" HPOS="229" ID="string_tl_22" VPOS="1235" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="229 1337 1676 1337" HEIGHT="52" HPOS="229" ID="tl_23" VPOS="1285" WIDTH="1447">
<String CONTENT="Saturne, de la Terre. Il les avait puisés dans l'ouvrage de Saverien, et" HEIGHT="52" HPOS="229" ID="string_tl_23" VPOS="1285" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="230 1386 1676 1386" HEIGHT="52" HPOS="230" ID="tl_24" VPOS="1334" WIDTH="1446">
<String CONTENT="il ignorait que du vivant de Pascal ces nombres n’avaient pas pu être" HEIGHT="52" HPOS="230" ID="string_tl_24" VPOS="1334" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="229 1425 396 1425" HEIGHT="40" HPOS="229" ID="tl_25" VPOS="1385" WIDTH="167">
<String CONTENT="calculés." HEIGHT="40" HPOS="229" ID="string_tl_25" VPOS="1385" WIDTH="167"/>
</TextLine>
