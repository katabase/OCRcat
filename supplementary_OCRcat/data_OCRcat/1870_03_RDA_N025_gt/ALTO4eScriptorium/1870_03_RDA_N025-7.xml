<TextLine BASELINE="279 1750 1671 1750" HEIGHT="51" HPOS="279" ID="tl_31" VPOS="1699" WIDTH="1392">
<String CONTENT="Y EN AVAIT-IL DE VRAIS? — Dans l’interrogatoire, M. le Président," HEIGHT="51" HPOS="279" ID="string_tl_31" VPOS="1699" WIDTH="1392"/>
</TextLine>
<TextLine BASELINE="229 1801 1677 1801" HEIGHT="52" HPOS="229" ID="tl_32" VPOS="1749" WIDTH="1448">
<String CONTENT="après l’exposé des faits qui lui sont imputés, a demandé à Lucas s’il les" HEIGHT="52" HPOS="229" ID="string_tl_32" VPOS="1749" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="229 1850 1675 1850" HEIGHT="51" HPOS="229" ID="tl_33" VPOS="1799" WIDTH="1446">
<String CONTENT="reconnaissait vrais. Celui-ci a répondu : « Pour une partie, mais pas" HEIGHT="51" HPOS="229" ID="string_tl_33" VPOS="1799" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="230 1899 1677 1899" HEIGHT="51" HPOS="230" ID="tl_34" VPOS="1848" WIDTH="1447">
<String CONTENT="pour tous. » — Demande : Voulez-vous dire que parmi les nombreuses" HEIGHT="51" HPOS="230" ID="string_tl_34" VPOS="1848" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="232 1950 1675 1950" HEIGHT="52" HPOS="232" ID="tl_35" VPOS="1898" WIDTH="1443">
<String CONTENT="pièces fausses que vous avez vendues au prix de l’or, il s’en trouve" HEIGHT="52" HPOS="232" ID="string_tl_35" VPOS="1898" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="229 2000 1676 2000" HEIGHT="52" HPOS="229" ID="tl_36" VPOS="1948" WIDTH="1447">
<String CONTENT="quelques -unes qui sont vraies ? — Réponse : Oui, monsieur, j’ai vendu" HEIGHT="52" HPOS="229" ID="string_tl_36" VPOS="1948" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="230 2050 1676 2050" HEIGHT="53" HPOS="230" ID="tl_37" VPOS="1997" WIDTH="1446">
<String CONTENT="plus de 30,000 pièces à M. Chasles, et il n’en représente que 27,000 ;" HEIGHT="53" HPOS="230" ID="string_tl_37" VPOS="1997" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="230 2099 1677 2099" HEIGHT="51" HPOS="230" ID="tl_38" VPOS="2048" WIDTH="1447">
<String CONTENT="il y en a donc 3 ou 4,000 que M. Chasles n’a pas montrées et qui sont" HEIGHT="51" HPOS="230" ID="string_tl_38" VPOS="2048" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="229 2150 500 2150" HEIGHT="51" HPOS="229" ID="tl_39" VPOS="2099" WIDTH="271">
<String CONTENT="authentiques." HEIGHT="51" HPOS="229" ID="string_tl_39" VPOS="2099" WIDTH="271"/>
</TextLine>
</TextBlock>
