<TextLine BASELINE="274 280 1671 280" HEIGHT="51" HPOS="274" ID="tl_2" VPOS="229" WIDTH="1397">
<String CONTENT="LUCAS N'A PAS DE COMPLICES. — Le réquisitoire résume ainsi ce point" HEIGHT="51" HPOS="274" ID="string_tl_2" VPOS="229" WIDTH="1397"/>
</TextLine>
<TextLine BASELINE="227 329 1671 329" HEIGHT="51" HPOS="227" ID="tl_3" VPOS="278" WIDTH="1444">
<String CONTENT="important : « Les experts répondent, sans hésitation, que tous les au¬" HEIGHT="51" HPOS="227" ID="string_tl_3" VPOS="278" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="227 379 1670 379" HEIGHT="51" HPOS="227" ID="tl_4" VPOS="328" WIDTH="1443">
<String CONTENT="tographes, sans exception, sont l’œuvre de Lucas. Mais Lucas ne peut-" HEIGHT="51" HPOS="227" ID="string_tl_4" VPOS="328" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="225 434 1669 434" HEIGHT="57" HPOS="225" ID="tl_5" VPOS="377" WIDTH="1444">
<String CONTENT="être que l’ouvrier mis en œuvre par un personnage mystérieux ? Non," HEIGHT="57" HPOS="225" ID="string_tl_5" VPOS="377" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="228 478 1673 478" HEIGHT="51" HPOS="228" ID="tl_6" VPOS="427" WIDTH="1445">
<String CONTENT="messieurs, il ne peut rester aucun doute sur ce point, le plus intéres¬" HEIGHT="51" HPOS="228" ID="string_tl_6" VPOS="427" WIDTH="1445"/>
</TextLine>
<TextLine BASELINE="227 528 1670 528" HEIGHT="52" HPOS="227" ID="tl_7" VPOS="476" WIDTH="1443">
<String CONTENT="sant, peut-être, de tous ceux que vous avez à examiner. Lucas a seul," HEIGHT="52" HPOS="227" ID="string_tl_7" VPOS="476" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="227 576 1671 576" HEIGHT="50" HPOS="227" ID="tl_8" VPOS="526" WIDTH="1444">
<String CONTENT="et sans autres ressources que les éléments qu’il puisait dans les biblio¬" HEIGHT="50" HPOS="227" ID="string_tl_8" VPOS="526" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="229 627 1673 627" HEIGHT="52" HPOS="229" ID="tl_9" VPOS="575" WIDTH="1444">
<String CONTENT="thèques publiques, traité toutes les questions scientifiques qui ont été" HEIGHT="52" HPOS="229" ID="string_tl_9" VPOS="575" WIDTH="1444"/>
</TextLine>
<TextLine BASELINE="227 665 1116 665" HEIGHT="41" HPOS="227" ID="tl_10" VPOS="624" WIDTH="889">
<String CONTENT="débattues devant l’Académie des sciences. »" HEIGHT="41" HPOS="227" ID="string_tl_10" VPOS="624" WIDTH="889"/>
</TextLine>
