<TextLine BASELINE="281 1485 1675 1485" HEIGHT="50" HPOS="281" ID="tl_26" VPOS="1435" WIDTH="1394">
<String CONTENT="« Celte erreur démontre qu’il n’avait pas derrière lui, comme on" HEIGHT="50" HPOS="281" ID="string_tl_26" VPOS="1435" WIDTH="1394"/>
</TextLine>
<TextLine BASELINE="230 1535 1671 1535" HEIGHT="52" HPOS="230" ID="tl_27" VPOS="1483" WIDTH="1441">
<String CONTENT="l’avait cru, un savant dirigeant sa main. Dans cette même correspon¬" HEIGHT="52" HPOS="230" ID="string_tl_27" VPOS="1483" WIDTH="1441"/>
</TextLine>
<TextLine BASELINE="228 1586 1678 1586" HEIGHT="53" HPOS="228" ID="tl_28" VPOS="1533" WIDTH="1450">
<String CONTENT="dance, la partie littéraire fourmille d’invraisemblances. Lucas prête" HEIGHT="53" HPOS="228" ID="string_tl_28" VPOS="1533" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="228 1635 1674 1635" HEIGHT="51" HPOS="228" ID="tl_29" VPOS="1584" WIDTH="1446">
<String CONTENT="aux savants et aux grands personnages qu’il met en scène son propre" HEIGHT="51" HPOS="228" ID="string_tl_29" VPOS="1584" WIDTH="1446"/>
</TextLine>
<TextLine BASELINE="227 1684 442 1684" HEIGHT="52" HPOS="227" ID="tl_30" VPOS="1632" WIDTH="215">
<String CONTENT="langage. »" HEIGHT="52" HPOS="227" ID="string_tl_30" VPOS="1632" WIDTH="215"/>
</TextLine>
