<TextLine BASELINE="281 2200 1674 2200" HEIGHT="54" HPOS="281" ID="tl_40" VPOS="2146" WIDTH="1393">
<String CONTENT="Les experts, consultés sur ce point dans le cours de l’instruction," HEIGHT="54" HPOS="281" ID="string_tl_40" VPOS="2146" WIDTH="1393"/>
</TextLine>
<TextLine BASELINE="230 2249 1679 2249" HEIGHT="52" HPOS="230" ID="tl_41" VPOS="2197" WIDTH="1449">
<String CONTENT="avaient trouvé que les pièces authentiques, mêlées aux fausses, au" HEIGHT="52" HPOS="230" ID="string_tl_41" VPOS="2197" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="230 2298 1680 2298" HEIGHT="51" HPOS="230" ID="tl_42" VPOS="2247" WIDTH="1450">
<String CONTENT="nombre d’une centaine, atteignaient à peine la valeur de 500 fr. Lucas" HEIGHT="51" HPOS="230" ID="string_tl_42" VPOS="2247" WIDTH="1450"/>
</TextLine>
<TextLine BASELINE="232 2349 1679 2349" HEIGHT="52" HPOS="232" ID="tl_43" VPOS="2297" WIDTH="1447">
<String CONTENT="leur a répondu que M. Chasles avait dissimulé volontairement un cer¬" HEIGHT="52" HPOS="232" ID="string_tl_43" VPOS="2297" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="234 2399 1677 2399" HEIGHT="53" HPOS="234" ID="tl_44" VPOS="2346" WIDTH="1443">
<String CONTENT="tain nombre de pièces, et il a désigné quelques-unes de ces pièces." HEIGHT="53" HPOS="234" ID="string_tl_44" VPOS="2346" WIDTH="1443"/>
</TextLine>
<TextLine BASELINE="232 2448 1681 2448" HEIGHT="52" HPOS="232" ID="tl_45" VPOS="2396" WIDTH="1449">
<String CONTENT="Voici quelle est la réponse des experts : « Quand l’inculpé commence" HEIGHT="52" HPOS="232" ID="string_tl_45" VPOS="2396" WIDTH="1449"/>
</TextLine>
<TextLine BASELINE="233 2497 1681 2497" HEIGHT="52" HPOS="233" ID="tl_46" VPOS="2445" WIDTH="1448">
<String CONTENT="l’énumération des pièces de bon aloi qu’il aurait fournies par des docu¬" HEIGHT="52" HPOS="233" ID="string_tl_46" VPOS="2445" WIDTH="1448"/>
</TextLine>
<TextLine BASELINE="234 2547 1681 2547" HEIGHT="52" HPOS="234" ID="tl_47" VPOS="2495" WIDTH="1447">
<String CONTENT="ments signés de Charlemagne, d’Alcuin, de Gerbert, de saint Louis, de" HEIGHT="52" HPOS="234" ID="string_tl_47" VPOS="2495" WIDTH="1447"/>
</TextLine>
<TextLine BASELINE="233 2597 1682 2597" HEIGHT="52" HPOS="233" ID="tl_48" VPOS="2545" WIDTH="1449">
<String CONTENT="Blanche de Castille, il montre à quel point il ignore que de telles pièces" HEIGHT="52" HPOS="233" ID="string_tl_48" VPOS="2545" WIDTH="1449"/>
</TextLine>
